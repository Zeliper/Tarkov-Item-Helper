<Window x:Class="TarkovHelper.Windows.Dialogs.OverlaySettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Overlay Settings"
        Width="320" Height="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#1E1E1E">

    <Window.Resources>
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,12,0,8"/>
        </Style>

        <Style x:Key="SettingLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#B0B0B0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="SettingValue" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="MinWidth" Value="50"/>
        </Style>

        <Style TargetType="Slider">
            <Setter Property="Margin" Value="0,4"/>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="Margin" Value="0,6"/>
        </Style>

        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#444444"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#555555"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="BorderBrush" Value="#1976D2"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#42A5F5"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1E88E5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Opacity -->
                <TextBlock Text="Display" Style="{StaticResource SectionHeader}"/>

                <Grid Margin="0,4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Opacity" Style="{StaticResource SettingLabel}"/>
                    <TextBlock x:Name="TxtOpacity" Grid.Column="1" Style="{StaticResource SettingValue}"/>
                </Grid>
                <Slider x:Name="SliderOpacity" Minimum="10" Maximum="100" Value="80"
                        ValueChanged="SliderOpacity_ValueChanged"/>

                <!-- Zoom -->
                <Grid Margin="0,8,0,4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Zoom Level" Style="{StaticResource SettingLabel}"/>
                    <TextBlock x:Name="TxtZoom" Grid.Column="1" Style="{StaticResource SettingValue}"/>
                </Grid>
                <Slider x:Name="SliderZoom" Minimum="25" Maximum="400" Value="100"
                        ValueChanged="SliderZoom_ValueChanged"/>

                <!-- View Mode -->
                <TextBlock Text="View Mode" Style="{StaticResource SectionHeader}"/>

                <RadioButton x:Name="RbFixed" Content="Fixed View" Foreground="#E0E0E0" Margin="0,4"
                             Checked="ViewMode_Changed"/>
                <RadioButton x:Name="RbTracking" Content="Player Tracking" Foreground="#E0E0E0" Margin="0,4"
                             Checked="ViewMode_Changed"/>

                <!-- Markers -->
                <TextBlock Text="Markers" Style="{StaticResource SectionHeader}"/>

                <CheckBox x:Name="ChkQuestMarkers" Content="Show Quest Markers"
                          Checked="Marker_Changed" Unchecked="Marker_Changed"/>
                <CheckBox x:Name="ChkHideCompletedObjectives" Content="Hide Completed Objectives"
                          Checked="HideCompleted_Changed" Unchecked="HideCompleted_Changed"/>

                <CheckBox x:Name="ChkExtractMarkers" Content="Show Extract Markers"
                          Checked="Marker_Changed" Unchecked="Marker_Changed"/>

                <!-- Extract Filters (synced with MapPage) -->
                <StackPanel Margin="20,4,0,0">
                    <CheckBox x:Name="ChkShowPmcExtracts" Content="PMC Extracts" Foreground="#4CAF50"
                              Checked="ExtractFilter_Changed" Unchecked="ExtractFilter_Changed"/>
                    <CheckBox x:Name="ChkShowScavExtracts" Content="Scav Extracts" Foreground="#9E9E9E"
                              Checked="ExtractFilter_Changed" Unchecked="ExtractFilter_Changed"/>
                    <CheckBox x:Name="ChkShowTransitExtracts" Content="Transit" Foreground="#FF9800"
                              Checked="ExtractFilter_Changed" Unchecked="ExtractFilter_Changed"/>
                </StackPanel>

                <!-- Mode -->
                <TextBlock Text="Interaction" Style="{StaticResource SectionHeader}"/>

                <CheckBox x:Name="ChkClickThrough" Content="Click-Through Mode"
                          Checked="ClickThrough_Changed" Unchecked="ClickThrough_Changed"/>
                <TextBlock Text="When enabled, mouse clicks pass through the overlay"
                           Foreground="#666666" FontSize="11" Margin="20,0,0,0"/>

                <!-- Actions -->
                <TextBlock Text="Actions" Style="{StaticResource SectionHeader}"/>

                <Button Content="Center on Player" Style="{StaticResource ActionButton}"
                        Click="BtnCenterPlayer_Click" Margin="0,4"/>
                <Button Content="Reset to Defaults" Style="{StaticResource ActionButton}"
                        Click="BtnReset_Click" Margin="0,4"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Bottom buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Close" Style="{StaticResource ActionButton}"
                    Click="BtnClose_Click" Width="80"/>
        </StackPanel>
    </Grid>
</Window>
