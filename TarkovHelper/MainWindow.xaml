<Window x:Class="TarkovHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TarkovHelper"
        mc:Ignorable="d"
        Title="Tarkov Item Helper" Height="800" Width="1200"
        MinHeight="600" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        Closing="Window_Closing">

    <Grid>
        <!-- Header -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Border Grid.Row="0" Background="{StaticResource BackgroundMediumBrush}" Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="TARKOV ITEM HELPER" FontSize="20" FontWeight="Bold"
                               Foreground="{StaticResource AccentBrush}" VerticalAlignment="Center"/>
                    <TextBlock x:Name="TxtAppSubtitle" Text="Quest &amp; Hideout Tracker" FontSize="12"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               VerticalAlignment="Center" Margin="12,0,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <!-- Buy me a coffee -->
                    <Button x:Name="BtnBuyMeACoffee" Click="BtnBuyMeACoffee_Click" Margin="0,0,16,0"
                            Padding="10,4" Cursor="Hand">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="â˜•" FontSize="14" Margin="0,0,6,0" VerticalAlignment="Center"
                                       Foreground="{StaticResource AccentBrush}"/>
                            <TextBlock Text="Buy me a coffee" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <!-- Language Selector -->
                    <ComboBox x:Name="CmbLanguage" Width="60" Margin="0,0,16,0"
                              SelectionChanged="CmbLanguage_SelectionChanged" SelectedIndex="0">
                        <ComboBoxItem Content="EN" Tag="EN"/>
                        <ComboBoxItem Content="KO" Tag="KO"/>
                        <ComboBoxItem Content="JA" Tag="JA"/>
                    </ComboBox>
                    <Button x:Name="BtnSettings" Content="Settings" Click="BtnSettings_Click" Margin="0,0,8,0"/>
                    <Button x:Name="BtnRefreshData" Content="Refresh Data" Click="BtnRefreshData_Click" Margin="0,0,8,0"/>
                    <Button x:Name="BtnResetProgress" Content="Reset Progress" Click="BtnResetProgress_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <TabControl Grid.Row="1" x:Name="MainTabControl" Margin="0">
            <!-- Quests Tab -->
            <TabItem x:Name="TabQuests" Header="QUESTS">
                <Grid Margin="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="350"/>
                    </Grid.ColumnDefinitions>

                    <!-- Quest List -->
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Search and Filters -->
                        <Grid Grid.Row="0" Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="TxtQuestSearch" Grid.Column="0"
                                     TextChanged="TxtQuestSearch_TextChanged"
                                     Tag="Search quests (EN/KO/Trader)..."/>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="12,0,0,0">
                                <CheckBox x:Name="ChkHideCompleted" Content="Hide Completed"
                                          Checked="FilterChanged" Unchecked="FilterChanged" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>

                        <!-- Quest Search and Complete -->
                        <Border Grid.Row="1" Background="{StaticResource BackgroundMediumBrush}"
                                CornerRadius="4" Padding="12" Margin="0,0,0,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock x:Name="TxtSearchAndComplete" Text="Search &amp; Complete" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                    <TextBlock x:Name="TxtSearchAndCompleteDesc" Text="Search for a quest and complete it with all prerequisites"
                                               Foreground="{StaticResource TextSecondaryBrush}" FontSize="11"/>
                                </StackPanel>

                                <Button x:Name="BtnSearchQuest" Grid.Column="1" Content="Search Quest" Click="BtnSearchQuest_Click" Padding="16,8"/>
                            </Grid>
                        </Border>

                        <!-- Quest ListView -->
                        <ListView Grid.Row="2" x:Name="LstQuests"
                                  SelectionChanged="LstQuests_SelectionChanged"
                                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <CheckBox Grid.Column="0" IsChecked="{Binding IsCompleted, Mode=OneWay}"
                                                  Checked="QuestCheckBox_Changed" Unchecked="QuestCheckBox_Changed"
                                                  Tag="{Binding Quest.Id}"
                                                  VerticalAlignment="Center" Margin="0,0,12,0"/>

                                        <StackPanel Grid.Column="1">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock FontWeight="SemiBold">
                                                    <TextBlock.Text>
                                                        <MultiBinding Converter="{StaticResource LocalizedNameConverter}">
                                                            <Binding Path="Quest.NameEn"/>
                                                            <Binding Path="Quest.NameKo"/>
                                                        </MultiBinding>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                                <Border Visibility="{Binding IsAvailable, Converter={StaticResource BoolToVisibilityConverter}}"
                                                        Background="{StaticResource SuccessBrush}" CornerRadius="2"
                                                        Padding="6,2" Margin="8,0,0,0">
                                                    <TextBlock x:Name="TxtAvailable" Text="Available" FontSize="10" Foreground="White"/>
                                                </Border>
                                                <Button Content="Wiki" Padding="6,2" FontSize="9" Margin="8,0,0,0"
                                                        Tag="{Binding Quest.WikiLink}" Click="BtnQuestItemWiki_Click"
                                                        Visibility="{Binding Quest.WikiLink, Converter={StaticResource NullToVisibilityConverter}}"/>
                                            </StackPanel>
                                            <TextBlock Foreground="{StaticResource TextSecondaryBrush}" FontSize="11">
                                                <TextBlock.Text>
                                                    <MultiBinding Converter="{StaticResource LocalizedSecondaryNameConverter}">
                                                        <Binding Path="Quest.NameEn"/>
                                                        <Binding Path="Quest.NameKo"/>
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                <TextBlock FontSize="10" Foreground="{StaticResource AccentBrush}">
                                                    <Run Text="{Binding Quest.TraderName}"/>
                                                    <Run Text=" | Lv."/>
                                                    <Run Text="{Binding Quest.MinPlayerLevel}"/>
                                                </TextBlock>
                                            </StackPanel>
                                        </StackPanel>

                                        <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding RequiredItemCount, StringFormat='{}{0} items'}"
                                                       FontSize="11" Foreground="{StaticResource TextSecondaryBrush}"
                                                       HorizontalAlignment="Right"
                                                       Visibility="{Binding RequiredItemCount, Converter={StaticResource IntToVisibilityConverter}}"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>

                    <!-- Quest Details -->
                    <Border Grid.Column="2" Background="{StaticResource BackgroundMediumBrush}"
                            CornerRadius="4" Padding="16">
                        <Grid x:Name="QuestDetailsPanel">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" x:Name="TxtQuestDetailTitle" Text="Select a Quest"
                                           FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
                                <Button Grid.Column="1" x:Name="BtnQuestWiki" Content="Wiki"
                                        Click="BtnQuestWiki_Click" Visibility="Collapsed"
                                        Padding="8,4" FontSize="11"/>
                            </Grid>

                            <TextBlock Grid.Row="1" x:Name="TxtQuestDetailSubtitle"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       TextWrapping="Wrap" Margin="0,0,0,16"/>

                            <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
                                <StackPanel x:Name="QuestObjectivesPanel"/>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Hideout Tab -->
            <TabItem x:Name="TabHideout" Header="HIDEOUT">
                <Grid Margin="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="400"/>
                    </Grid.ColumnDefinitions>

                    <!-- Station List -->
                    <ListView Grid.Column="0" x:Name="LstHideout"
                              SelectionChanged="LstHideout_SelectionChanged"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Image Grid.Column="0" Source="{Binding Station.ImageLink, Converter={StaticResource CachedImageConverter}}"
                                           Width="50" Height="50" Stretch="Uniform"
                                           RenderOptions.BitmapScalingMode="HighQuality"/>

                                    <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                                        <TextBlock FontWeight="SemiBold" FontSize="14">
                                            <TextBlock.Text>
                                                <MultiBinding Converter="{StaticResource LocalizedNameConverter}">
                                                    <Binding Path="Station.NameEn"/>
                                                    <Binding Path="Station.NameKo"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                        <TextBlock Foreground="{StaticResource TextSecondaryBrush}" FontSize="11">
                                            <TextBlock.Text>
                                                <MultiBinding Converter="{StaticResource LocalizedSecondaryNameConverter}">
                                                    <Binding Path="Station.NameEn"/>
                                                    <Binding Path="Station.NameKo"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock FontSize="18" FontWeight="Bold" Foreground="{StaticResource AccentBrush}">
                                                <Run Text="Lv."/>
                                                <Run Text="{Binding CurrentLevel}"/>
                                            </TextBlock>
                                            <TextBlock FontSize="14" Foreground="{StaticResource TextSecondaryBrush}"
                                                       VerticalAlignment="Bottom" Margin="4,0,0,2">
                                                <Run Text="/"/>
                                                <Run Text="{Binding MaxLevel}"/>
                                            </TextBlock>
                                        </StackPanel>
                                        <ProgressBar Value="{Binding CurrentLevel}" Maximum="{Binding MaxLevel}"
                                                     Width="80" Height="6" Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <!-- Hideout Details -->
                    <Border Grid.Column="2" Background="{StaticResource BackgroundMediumBrush}"
                            CornerRadius="4" Padding="16">
                        <Grid x:Name="HideoutDetailsPanel">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" x:Name="TxtHideoutDetailTitle" Text="Select a Station"
                                       FontSize="16" FontWeight="Bold" Margin="0,0,0,4"/>
                            <TextBlock Grid.Row="1" x:Name="TxtHideoutDetailSubtitle"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       FontSize="12" Margin="0,0,0,12"/>

                            <StackPanel Grid.Row="2" x:Name="HideoutLevelSelector" Orientation="Horizontal" Margin="0,0,0,16">
                                <TextBlock x:Name="TxtCurrentLevel" Text="Current Level:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <ComboBox x:Name="CmbHideoutLevel" Width="80"
                                          SelectionChanged="CmbHideoutLevel_SelectionChanged"/>
                            </StackPanel>

                            <TextBlock Grid.Row="3" x:Name="TxtNextLevelTitle" Text="Next Level Requirements"
                                       FontWeight="SemiBold" Margin="0,0,0,8"/>

                            <ScrollViewer Grid.Row="4" VerticalScrollBarVisibility="Auto">
                                <StackPanel x:Name="HideoutRequirementsPanel"/>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Required Items Tab -->
            <TabItem x:Name="TabRequiredItems" Header="REQUIRED ITEMS">
                <Grid Margin="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="350"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Panel: Item List -->
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Summary -->
                        <Border Grid.Row="0" Background="{StaticResource BackgroundMediumBrush}"
                                CornerRadius="4" Padding="16" Margin="0,0,0,16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock x:Name="TxtTotalItems" Text="0" FontSize="24" FontWeight="Bold"
                                               Foreground="{StaticResource AccentBrush}"/>
                                    <TextBlock x:Name="TxtTotalItemsLabel" Text="Total Items" Foreground="{StaticResource TextSecondaryBrush}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <TextBlock x:Name="TxtQuestItems" Text="0" FontSize="24" FontWeight="Bold"/>
                                    <TextBlock x:Name="TxtQuestItemsLabel" Text="Quest Items" Foreground="{StaticResource TextSecondaryBrush}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock x:Name="TxtHideoutItems" Text="0" FontSize="24" FontWeight="Bold"/>
                                    <TextBlock x:Name="TxtHideoutItemsLabel" Text="Hideout Items" Foreground="{StaticResource TextSecondaryBrush}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="3">
                                    <TextBlock x:Name="TxtFirItems" Text="0" FontSize="24" FontWeight="Bold"
                                               Foreground="{StaticResource FirBrush}"/>
                                    <TextBlock x:Name="TxtFirItemsLabel" Text="FIR Required" Foreground="{StaticResource TextSecondaryBrush}"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Filters -->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,12">
                            <TextBox x:Name="TxtItemSearch" Width="200" Tag="Search items..."
                                     TextChanged="TxtItemSearch_TextChanged"/>
                            <CheckBox x:Name="ChkShowFirOnly" Content="FIR Only" Margin="16,0,0,0"
                                      Checked="ItemFilterChanged" Unchecked="ItemFilterChanged" VerticalAlignment="Center"/>
                            <CheckBox x:Name="ChkShowQuestOnly" Content="Quest Items" Margin="16,0,0,0"
                                      Checked="ItemFilterChanged" Unchecked="ItemFilterChanged" VerticalAlignment="Center"/>
                            <CheckBox x:Name="ChkShowHideoutOnly" Content="Hideout Items" Margin="16,0,0,0"
                                      Checked="ItemFilterChanged" Unchecked="ItemFilterChanged" VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Item List -->
                        <ListView Grid.Row="2" x:Name="LstRequiredItems"
                                  SelectionChanged="LstRequiredItems_SelectionChanged"
                                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="8,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0" Background="{StaticResource BackgroundLightBrush}"
                                                CornerRadius="4" Width="44" Height="44">
                                            <Image Source="{Binding IconLink, Converter={StaticResource CachedImageConverter}}" Stretch="Uniform" Margin="2"
                                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                                        </Border>

                                        <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock FontWeight="SemiBold">
                                                    <TextBlock.Text>
                                                        <MultiBinding Converter="{StaticResource LocalizedNameConverter}">
                                                            <Binding Path="ItemNameEn"/>
                                                            <Binding Path="ItemNameKo"/>
                                                        </MultiBinding>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                                <Button Content="Wiki" Padding="6,2" FontSize="9" Margin="8,0,0,0"
                                                        Tag="{Binding WikiLink}" Click="BtnItemWiki_Click"
                                                        Visibility="{Binding WikiLink, Converter={StaticResource NullToVisibilityConverter}}"/>
                                            </StackPanel>
                                            <TextBlock Foreground="{StaticResource TextSecondaryBrush}" FontSize="11">
                                                <TextBlock.Text>
                                                    <MultiBinding Converter="{StaticResource LocalizedSecondaryNameConverter}">
                                                        <Binding Path="ItemNameEn"/>
                                                        <Binding Path="ItemNameKo"/>
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </StackPanel>

                                        <!-- Quest Count -->
                                        <StackPanel Grid.Column="2" Margin="8,0" VerticalAlignment="Center" Width="70">
                                            <TextBlock x:Name="TxtQuestLabel" Text="Quest" FontSize="10"
                                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding QuestNormalCount}" FontWeight="SemiBold"/>
                                                <TextBlock Text=" + " Foreground="{StaticResource TextSecondaryBrush}"
                                                           Visibility="{Binding QuestFirCount, Converter={StaticResource IntToVisibilityConverter}}"/>
                                                <TextBlock Text="{Binding QuestFirCount}" FontWeight="SemiBold"
                                                           Foreground="{StaticResource FirBrush}"
                                                           Visibility="{Binding QuestFirCount, Converter={StaticResource IntToVisibilityConverter}}"/>
                                                <TextBlock Text=" FIR" FontSize="10" Foreground="{StaticResource FirBrush}"
                                                           VerticalAlignment="Bottom" Margin="0,0,0,1"
                                                           Visibility="{Binding QuestFirCount, Converter={StaticResource IntToVisibilityConverter}}"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Hideout Count -->
                                        <StackPanel Grid.Column="3" Margin="8,0" VerticalAlignment="Center" Width="70">
                                            <TextBlock x:Name="TxtHideoutLabel" Text="Hideout" FontSize="10"
                                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding HideoutNormalCount}" FontWeight="SemiBold"/>
                                                <TextBlock Text=" + " Foreground="{StaticResource TextSecondaryBrush}"
                                                           Visibility="{Binding HideoutFirCount, Converter={StaticResource IntToVisibilityConverter}}"/>
                                                <TextBlock Text="{Binding HideoutFirCount}" FontWeight="SemiBold"
                                                           Foreground="{StaticResource FirBrush}"
                                                           Visibility="{Binding HideoutFirCount, Converter={StaticResource IntToVisibilityConverter}}"/>
                                                <TextBlock Text=" FIR" FontSize="10" Foreground="{StaticResource FirBrush}"
                                                           VerticalAlignment="Bottom" Margin="0,0,0,1"
                                                           Visibility="{Binding HideoutFirCount, Converter={StaticResource IntToVisibilityConverter}}"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Total -->
                                        <Border Grid.Column="4" Background="{StaticResource BackgroundLightBrush}"
                                                CornerRadius="4" Padding="8,4" MinWidth="60">
                                            <StackPanel>
                                                <TextBlock x:Name="TxtTotalLabel" Text="Total" FontSize="10"
                                                           Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                                                <TextBlock Text="{Binding TotalCount}" FontSize="16" FontWeight="Bold"
                                                           Foreground="{StaticResource AccentBrush}" HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>

                    <!-- Right Panel: Item Details -->
                    <Border Grid.Column="2" Background="{StaticResource BackgroundMediumBrush}"
                            CornerRadius="4" Padding="16">
                        <Grid x:Name="ItemDetailsPanel">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" x:Name="TxtItemDetailTitle" Text="Select an Item"
                                       FontSize="16" FontWeight="Bold" Margin="0,0,0,4"/>
                            <TextBlock Grid.Row="1" x:Name="TxtItemDetailSubtitle"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       TextWrapping="Wrap" Margin="0,0,0,16"/>

                            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                                <StackPanel x:Name="ItemSourcesPanel"/>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="{StaticResource BackgroundMediumBrush}" Padding="16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" x:Name="TxtStatus"
                           Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock x:Name="TxtQuestProgress" Foreground="{StaticResource TextSecondaryBrush}"
                               VerticalAlignment="Center" Margin="0,0,16,0"/>
                    <TextBlock x:Name="TxtHideoutProgress" Foreground="{StaticResource TextSecondaryBrush}"
                               VerticalAlignment="Center" Margin="0,0,16,0"/>

                    <!-- Log Monitoring Status -->
                    <Border x:Name="LogStatusBorder" Background="{StaticResource BackgroundLightBrush}"
                            CornerRadius="4" Padding="8,4" Cursor="Hand"
                            MouseLeftButtonUp="LogStatusBorder_Click">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse x:Name="LogStatusIndicator" Width="10" Height="10"
                                     Fill="{StaticResource TextSecondaryBrush}" Margin="0,0,6,0"/>
                            <TextBlock x:Name="TxtLogStatus" Text="Log" FontSize="11"
                                       Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                        </StackPanel>
                        <Border.ToolTip>
                            <ToolTip x:Name="LogStatusTooltip" Content="Click to configure log monitoring"/>
                        </Border.ToolTip>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>

</Window>
