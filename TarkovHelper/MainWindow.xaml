              MouseDown="WipeWarningOverlay_MouseDown">
            <Border Background="{StaticResource BackgroundDarkBrush}"
                    CornerRadius="8" Padding="24"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    MinWidth="500" MaxWidth="600">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
                </Border.Effect>
                <StackPanel>
                    <!-- Header -->
                    <Grid Margin="0,0,0,16">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âš ï¸" FontSize="24" VerticalAlignment="Center" Margin="0,0,12,0"/>
                            <TextBlock x:Name="TxtWipeWarningTitle" Text="í€˜ìŠ¤íŠ¸ ë™ê¸°í™” ì „ í™•ì¸" FontSize="20" FontWeight="SemiBold"
