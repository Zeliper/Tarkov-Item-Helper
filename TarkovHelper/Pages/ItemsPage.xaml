<UserControl x:Class="TarkovHelper.Pages.ItemsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900"
             Background="{StaticResource BackgroundDarkBrush}">

    <UserControl.Resources>
        <!-- Inherit FontFamily for all TextBlocks in this page -->
        <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}"/>

        <!-- Small Button Style for Quantity Controls -->
        <Style x:Key="QuantityButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="MinWidth" Value="28"/>
            <Setter Property="MinHeight" Value="22"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="FontSize" Value="{DynamicResource FontSizeTiny}"/>
            <Setter Property="Margin" Value="1,0"/>
        </Style>

        <!-- Item List Item Template with Inventory Controls -->
        <DataTemplate x:Key="ItemListTemplate">
            <Border x:Name="ItemBorder" Padding="12,6" BorderThickness="0,0,0,1"
                    BorderBrush="{StaticResource BorderBrush}"
                    Background="Transparent"
                    Opacity="{Binding ItemOpacity}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="56"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="70"/>
                    </Grid.ColumnDefinitions>

                    <!-- Item Icon -->
                    <Border Grid.Column="0" Grid.RowSpan="2" Width="48" Height="48"
                            CornerRadius="4" Background="{StaticResource BackgroundLightBrush}"
                            VerticalAlignment="Center">
                        <Grid>
                            <Image Source="{Binding IconSource}"
                                   Width="44" Height="44"
                                   Stretch="Uniform"
                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                            <!-- Fulfilled checkmark overlay -->
                            <TextBlock Text="&#x2713;" FontSize="{DynamicResource FontSizeXLarge}" FontWeight="Bold"
                                       Foreground="{StaticResource SuccessBrush}"
                                       HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                       Margin="0,0,2,0"
                                       Visibility="{Binding FulfilledVisibility}"/>
                        </Grid>
                    </Border>

                    <!-- Item Name -->
                    <StackPanel Grid.Column="1" Grid.Row="0" Margin="12,0,8,0" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding DisplayName}" FontSize="{DynamicResource FontSizeSmall}"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       TextTrimming="CharacterEllipsis"
                                       TextDecorations="{Binding NameTextDecorations}"/>
                            <Border Padding="4,1" CornerRadius="2" Margin="6,0,0,0"
                                    Background="{StaticResource WarningBrush}"
                                    Visibility="{Binding FirVisibility}">
                                <TextBlock Text="FIR" FontSize="{DynamicResource FontSizeTiny}" Foreground="White"/>
                            </Border>
                        </StackPanel>
                        <TextBlock Text="{Binding SubtitleName}" FontSize="{DynamicResource FontSizeTiny}"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Visibility="{Binding SubtitleVisibility}"
                                   TextTrimming="CharacterEllipsis"/>
                    </StackPanel>

                    <!-- Owned Quantity Display -->
                    <StackPanel Grid.Column="2" Grid.Row="0" Orientation="Horizontal"
                                VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Owned: " FontSize="{DynamicResource FontSizeTiny}"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding OwnedDisplay}" FontSize="{DynamicResource FontSizeXSmall}" FontWeight="SemiBold"
                                   Foreground="{StaticResource SuccessBrush}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Quick Quantity Buttons Row -->
                    <StackPanel Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2"
                                Orientation="Horizontal" Margin="12,4,0,0">
                        <TextBlock Text="FIR:" FontSize="{DynamicResource FontSizeTiny}" Foreground="{StaticResource TextSecondaryBrush}"
                                   VerticalAlignment="Center" Margin="0,0,4,0"/>
                        <Button Content="-1" Style="{StaticResource QuantityButtonStyle}"
                                Click="BtnFirMinus1_Click"/>
                        <TextBlock Text="{Binding OwnedFirQuantity}" FontSize="{DynamicResource FontSizeTiny}" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}" MinWidth="20"
                                   TextAlignment="Center" VerticalAlignment="Center" Margin="2,0"/>
                        <Button Content="+1" Style="{StaticResource QuantityButtonStyle}"
                                Click="BtnFirPlus1_Click"/>

                        <TextBlock Text="Non:" FontSize="{DynamicResource FontSizeTiny}" Foreground="{StaticResource TextSecondaryBrush}"
                                   VerticalAlignment="Center" Margin="10,0,4,0"/>
                        <Button Content="-1" Style="{StaticResource QuantityButtonStyle}"
                                Click="BtnNonFirMinus1_Click"/>
                        <TextBlock Text="{Binding OwnedNonFirQuantity}" FontSize="{DynamicResource FontSizeTiny}" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}" MinWidth="20"
                                   TextAlignment="Center" VerticalAlignment="Center" Margin="2,0"/>
                        <Button Content="+1" Style="{StaticResource QuantityButtonStyle}"
                                Click="BtnNonFirPlus1_Click"/>
                    </StackPanel>

                    <!-- Quest Count -->
                    <StackPanel Grid.Column="3" Grid.RowSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Quest" FontSize="{DynamicResource FontSizeTiny}"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding QuestDisplay}" FontSize="{DynamicResource FontSizeSmall}"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   HorizontalAlignment="Center" FontWeight="SemiBold"/>
                    </StackPanel>

                    <!-- Hideout Count -->
                    <StackPanel Grid.Column="4" Grid.RowSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Hideout" FontSize="{DynamicResource FontSizeTiny}"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding HideoutDisplay}" FontSize="{DynamicResource FontSizeSmall}"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   HorizontalAlignment="Center" FontWeight="SemiBold"/>
                    </StackPanel>

                    <!-- Total Count -->
                    <StackPanel Grid.Column="5" Grid.RowSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Need" FontSize="{DynamicResource FontSizeTiny}"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding TotalDisplay}" FontSize="{DynamicResource FontSizeSmall}"
                                   Foreground="{StaticResource AccentBrush}"
                                   HorizontalAlignment="Center" FontWeight="Bold"/>
                    </StackPanel>
                </Grid>
            </Border>
            <DataTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="ItemBorder" Property="Background" Value="{StaticResource BackgroundMediumBrush}"/>
                </Trigger>
            </DataTemplate.Triggers>
        </DataTemplate>

        <!-- ListBox Item Container Style -->
        <Style x:Key="ItemListBoxItem" TargetType="ListBoxItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Border" Background="{TemplateBinding Background}"
                                BorderThickness="0,0,0,0">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource BackgroundLightBrush}"/>
                                <Setter TargetName="Border" Property="BorderThickness" Value="3,0,0,0"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource BackgroundMediumBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <!-- Main Content -->
        <Grid x:Name="MainContent" Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Filter Bar -->
        <Border Grid.Row="0" Background="{StaticResource BackgroundMediumBrush}"
                CornerRadius="6" Padding="12,10" Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search Box -->
                <TextBox x:Name="TxtSearch" Grid.Column="0"
                         TextChanged="TxtSearch_TextChanged"
                         Margin="0,0,16,0">
                    <TextBox.Style>
                        <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                            <Setter Property="Tag" Value="Search items..."/>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <!-- Filter Toggles -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <!-- Source Filter -->
                    <ComboBox x:Name="CmbSource" Width="100" Margin="0,0,8,0"
                              SelectionChanged="CmbSource_SelectionChanged">
                        <ComboBoxItem Content="All" Tag="All" IsSelected="True"/>
                        <ComboBoxItem Content="Quest" Tag="Quest"/>
                        <ComboBoxItem Content="Hideout" Tag="Hideout"/>
                    </ComboBox>

                    <!-- Fulfillment Filter -->
                    <ComboBox x:Name="CmbFulfillment" Width="100" Margin="0,0,8,0"
                              SelectionChanged="CmbFulfillment_SelectionChanged">
                        <ComboBoxItem Content="All Status" Tag="All" IsSelected="True"/>
                        <ComboBoxItem Content="Not Started" Tag="NotStarted"/>
                        <ComboBoxItem Content="In Progress" Tag="InProgress"/>
                        <ComboBoxItem Content="Fulfilled" Tag="Fulfilled"/>
                    </ComboBox>

                    <!-- FIR Filter -->
                    <CheckBox x:Name="ChkFirOnly" Content="FIR Only"
                              Foreground="{StaticResource TextPrimaryBrush}"
                              VerticalContentAlignment="Center"
                              Margin="0,0,8,0" Cursor="Hand"
                              Checked="Filter_Changed" Unchecked="Filter_Changed"/>

                    <!-- Hide Fulfilled -->
                    <CheckBox x:Name="ChkHideFulfilled" Content="Hide Fulfilled"
                              Foreground="{StaticResource TextPrimaryBrush}"
                              VerticalContentAlignment="Center"
                              Margin="0,0,8,0" Cursor="Hand"
                              Checked="Filter_Changed" Unchecked="Filter_Changed"/>

                    <!-- Sort By -->
                    <ComboBox x:Name="CmbSort" Width="110"
                              SelectionChanged="CmbSort_SelectionChanged">
                        <ComboBoxItem Content="Name" Tag="Name" IsSelected="True"/>
                        <ComboBoxItem Content="Total Count" Tag="Total"/>
                        <ComboBoxItem Content="Quest Count" Tag="Quest"/>
                        <ComboBoxItem Content="Hideout" Tag="Hideout"/>
                        <ComboBoxItem Content="Progress" Tag="Progress"/>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Statistics Bar -->
        <Border Grid.Row="1" Padding="12,6" Margin="0,0,0,12">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="TxtStats" FontSize="{DynamicResource FontSizeXSmall}"
                           Foreground="{StaticResource TextSecondaryBrush}"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="400"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="350" MinWidth="250"/>
            </Grid.ColumnDefinitions>

            <!-- Item List with Header -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Column Headers -->
                <Border Grid.Row="0" Background="{StaticResource BackgroundMediumBrush}"
                        CornerRadius="6,6,0,0" Padding="12,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="56"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="90"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="" FontSize="{DynamicResource FontSizeTiny}" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                        <TextBlock Grid.Column="1" Text="Item Name" FontSize="{DynamicResource FontSizeTiny}" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextSecondaryBrush}" Margin="12,0,0,0"/>
                        <TextBlock Grid.Column="3" Text="Quest" FontSize="{DynamicResource FontSizeTiny}" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Column="4" Text="Hideout" FontSize="{DynamicResource FontSizeTiny}" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Column="5" Text="Total" FontSize="{DynamicResource FontSizeTiny}" FontWeight="SemiBold"
                                   Foreground="{StaticResource AccentBrush}" HorizontalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- Item List -->
                <Border Grid.Row="1" Background="{StaticResource BackgroundMediumBrush}"
                        CornerRadius="0,0,6,6">
                    <ListBox x:Name="LstItems"
                             Background="Transparent"
                             BorderThickness="0"
                             ItemTemplate="{StaticResource ItemListTemplate}"
                             ItemContainerStyle="{StaticResource ItemListBoxItem}"
                             SelectionChanged="LstItems_SelectionChanged"
                             ScrollViewer.ScrollChanged="LstItems_ScrollChanged"
                             VirtualizingPanel.IsVirtualizing="True"
                             VirtualizingPanel.VirtualizationMode="Recycling"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
                </Border>
            </Grid>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="8" Background="Transparent"
                          HorizontalAlignment="Center" VerticalAlignment="Stretch"/>

            <!-- Detail Panel -->
            <Border Grid.Column="2" Background="{StaticResource BackgroundMediumBrush}"
                    CornerRadius="6" Padding="16">
                <Grid>
                    <!-- Empty State -->
                    <TextBlock x:Name="TxtSelectItem"
                               Text="Select an item to view details"
                               FontSize="{DynamicResource FontSizeSmall}" Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>

                    <Grid x:Name="DetailPanel" Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Item Header (Fixed) -->
                        <Grid Grid.Row="0" Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="64"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Item Icon -->
                            <Border Grid.Column="0" Width="56" Height="56"
                                    CornerRadius="6" Background="{StaticResource BackgroundDarkBrush}">
                                <Image x:Name="ImgDetailIcon"
                                       Width="48" Height="48"
                                       Stretch="Uniform"
                                       RenderOptions.BitmapScalingMode="HighQuality"/>
                            </Border>

                            <!-- Item Name -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="12,0,0,0">
                                <TextBlock x:Name="TxtDetailName" FontSize="{DynamicResource FontSizeMedium}" FontWeight="SemiBold"
                                           Foreground="{StaticResource AccentBrush}"
                                           TextWrapping="Wrap"/>
                                <TextBlock x:Name="TxtDetailSubtitle" FontSize="{DynamicResource FontSizeXSmall}"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Grid>

                        <!-- Wiki Button (Fixed) -->
                        <Button x:Name="BtnWiki" Grid.Row="1" Content="Open Wiki" Padding="12,6"
                                Margin="0,0,0,16" HorizontalAlignment="Left"
                                Click="BtnWiki_Click"/>

                        <!-- Scrollable Content -->
                        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <!-- Summary -->
                            <Border Background="{StaticResource BackgroundDarkBrush}"
                                    CornerRadius="4" Padding="12" Margin="0,0,0,16">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                        <TextBlock Text="Quest" FontSize="{DynamicResource FontSizeTiny}"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock x:Name="TxtDetailQuestCount" FontSize="{DynamicResource FontSizeLarge}" FontWeight="Bold"
                                                   Foreground="{StaticResource TextPrimaryBrush}"
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                        <TextBlock Text="Hideout" FontSize="{DynamicResource FontSizeTiny}"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock x:Name="TxtDetailHideoutCount" FontSize="{DynamicResource FontSizeLarge}" FontWeight="Bold"
                                                   Foreground="{StaticResource TextPrimaryBrush}"
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                        <TextBlock Text="Need" FontSize="{DynamicResource FontSizeTiny}"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock x:Name="TxtDetailTotalCount" FontSize="{DynamicResource FontSizeLarge}" FontWeight="Bold"
                                                   Foreground="{StaticResource AccentBrush}"
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Inventory Input Section -->
                            <TextBlock Text="Your Inventory" FontSize="{DynamicResource FontSizeSmall}" FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       Margin="0,0,0,8"/>
                            <Border Background="{StaticResource BackgroundDarkBrush}"
                                    CornerRadius="4" Padding="12" Margin="0,0,0,16">
                                <StackPanel>
                                    <!-- FIR Quantity Row -->
                                    <Grid Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                            <Border Padding="4,2" CornerRadius="2" Margin="0,0,6,0"
                                                    Background="{StaticResource WarningBrush}">
                                                <TextBlock Text="FIR" FontSize="{DynamicResource FontSizeTiny}" Foreground="White"/>
                                            </Border>
                                            <TextBlock Text="Qty:" FontSize="{DynamicResource FontSizeXSmall}"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                                            <Button Content="-5" Style="{StaticResource QuantityButtonStyle}"
                                                    Click="BtnDetailFirMinus5_Click"/>
                                            <Button Content="-1" Style="{StaticResource QuantityButtonStyle}"
                                                    Click="BtnDetailFirMinus1_Click"/>
                                            <Border Background="{StaticResource BackgroundMediumBrush}"
                                                    CornerRadius="4" Padding="4,4" Margin="4,0"
                                                    MinWidth="40">
                                                <TextBox x:Name="TxtDetailOwnedFir" Text="0"
                                                         FontSize="{DynamicResource FontSizeSmall}" FontWeight="Bold"
                                                         Foreground="{StaticResource TextPrimaryBrush}"
                                                         Background="Transparent"
                                                         BorderThickness="0"
                                                         HorizontalAlignment="Center"
                                                         TextAlignment="Center"
                                                         MinWidth="30"
                                                         VerticalContentAlignment="Center"
                                                         PreviewTextInput="TxtDetailOwned_PreviewTextInput"
                                                         LostFocus="TxtDetailOwnedFir_LostFocus"
                                                         KeyDown="TxtDetailOwnedFir_KeyDown"/>
                                            </Border>
                                            <Button Content="+1" Style="{StaticResource QuantityButtonStyle}"
                                                    Click="BtnDetailFirPlus1_Click"/>
                                            <Button Content="+5" Style="{StaticResource QuantityButtonStyle}"
                                                    Click="BtnDetailFirPlus5_Click"/>
                                        </StackPanel>
                                    </Grid>

                                    <!-- Non-FIR Quantity Row -->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="Non-FIR:" FontSize="{DynamicResource FontSizeXSmall}"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   VerticalAlignment="Center"/>

                                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                                            <Button Content="-5" Style="{StaticResource QuantityButtonStyle}"
                                                    Click="BtnDetailNonFirMinus5_Click"/>
                                            <Button Content="-1" Style="{StaticResource QuantityButtonStyle}"
                                                    Click="BtnDetailNonFirMinus1_Click"/>
                                            <Border Background="{StaticResource BackgroundMediumBrush}"
                                                    CornerRadius="4" Padding="4,4" Margin="4,0"
                                                    MinWidth="40">
                                                <TextBox x:Name="TxtDetailOwnedNonFir" Text="0"
                                                         FontSize="{DynamicResource FontSizeSmall}" FontWeight="Bold"
                                                         Foreground="{StaticResource TextPrimaryBrush}"
                                                         Background="Transparent"
                                                         BorderThickness="0"
                                                         HorizontalAlignment="Center"
                                                         TextAlignment="Center"
                                                         MinWidth="30"
                                                         VerticalContentAlignment="Center"
                                                         PreviewTextInput="TxtDetailOwned_PreviewTextInput"
                                                         LostFocus="TxtDetailOwnedNonFir_LostFocus"
                                                         KeyDown="TxtDetailOwnedNonFir_KeyDown"/>
                                            </Border>
                                            <Button Content="+1" Style="{StaticResource QuantityButtonStyle}"
                                                    Click="BtnDetailNonFirPlus1_Click"/>
                                            <Button Content="+5" Style="{StaticResource QuantityButtonStyle}"
                                                    Click="BtnDetailNonFirPlus5_Click"/>
                                        </StackPanel>
                                    </Grid>

                                    <!-- Fulfillment Status -->
                                    <Border Margin="0,12,0,0" Padding="8" CornerRadius="4"
                                            Background="{StaticResource BackgroundMediumBrush}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="Progress" FontSize="{DynamicResource FontSizeTiny}"
                                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                                                <ProgressBar x:Name="DetailProgressBar"
                                                             Height="6" Margin="0,4,8,0"
                                                             Minimum="0" Maximum="100" Value="0"
                                                             Foreground="{StaticResource AccentBrush}"
                                                             Background="{StaticResource BackgroundDarkBrush}"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" HorizontalAlignment="Right"
                                                        VerticalAlignment="Center">
                                                <TextBlock x:Name="TxtDetailFulfillmentStatus"
                                                           Text="Not Started"
                                                           FontSize="{DynamicResource FontSizeXSmall}" FontWeight="SemiBold"
                                                           Foreground="{StaticResource TextSecondaryBrush}"
                                                           HorizontalAlignment="Right"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </Border>

                            <!-- Quest Requirements Section -->
                            <StackPanel x:Name="QuestSection">
                                <TextBlock Text="Required for Quests" FontSize="{DynamicResource FontSizeSmall}" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           Margin="0,0,0,8"/>
                                <Border Background="{StaticResource BackgroundDarkBrush}"
                                        CornerRadius="4" Padding="12" Margin="0,0,0,16">
                                    <ItemsControl x:Name="QuestRequirementsList">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border x:Name="QuestItemBorder" Padding="4" Margin="0,2"
                                                        Background="{StaticResource BackgroundMediumBrush}"
                                                        CornerRadius="4">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <StackPanel Grid.Column="0" Margin="4,0"
                                                                    Cursor="Hand"
                                                                    MouseLeftButtonDown="QuestName_Click">
                                                            <TextBlock x:Name="QuestNameText"
                                                                       Text="{Binding QuestName}"
                                                                       FontSize="{DynamicResource FontSizeXSmall}" TextWrapping="Wrap">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                                                                        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=StackPanel}}" Value="True">
                                                                                <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                                                                                <Setter Property="TextDecorations" Value="Underline"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                            </TextBlock>
                                                            <TextBlock Text="{Binding TraderName}"
                                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                                       FontSize="{DynamicResource FontSizeTiny}"/>
                                                        </StackPanel>

                                                        <StackPanel Grid.Column="1" Orientation="Horizontal"
                                                                    VerticalAlignment="Center" Margin="8,0,4,0">
                                                            <TextBlock Text="{Binding AmountDisplay}"
                                                                       Foreground="{StaticResource AccentBrush}"
                                                                       FontSize="{DynamicResource FontSizeSmall}" FontWeight="Bold"
                                                                       VerticalAlignment="Center"/>
                                                            <Border Padding="4,2" CornerRadius="2" Margin="6,0,0,0"
                                                                    Background="{StaticResource WarningBrush}"
                                                                    Visibility="{Binding FirVisibility}">
                                                                <TextBlock Text="FIR" FontSize="{DynamicResource FontSizeTiny}" Foreground="White"/>
                                                            </Border>
                                                            <!-- Dogtag Level Requirement -->
                                                            <Border Padding="4,2" CornerRadius="2" Margin="4,0,0,0"
                                                                    Background="#6366F1"
                                                                    Visibility="{Binding DogtagLevelVisibility}">
                                                                <TextBlock Text="{Binding DogtagLevelDisplay}" FontSize="{DynamicResource FontSizeTiny}" Foreground="White"/>
                                                            </Border>
                                                        </StackPanel>

                                                        <Button Grid.Column="2" Content="Wiki" Padding="6,2"
                                                                FontSize="{DynamicResource FontSizeTiny}" MinWidth="40" Margin="4,0,0,0"
                                                                Click="BtnQuestWiki_Click"
                                                                Tag="{Binding}"
                                                                Visibility="{Binding WikiButtonVisibility}"/>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Border>
                            </StackPanel>

                            <!-- Hideout Requirements Section -->
                            <StackPanel x:Name="HideoutSection">
                                <TextBlock Text="Required for Hideout" FontSize="{DynamicResource FontSizeSmall}" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           Margin="0,0,0,8"/>
                                <Border Background="{StaticResource BackgroundDarkBrush}"
                                        CornerRadius="4" Padding="12" Margin="0,0,0,16">
                                    <ItemsControl x:Name="HideoutRequirementsList">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Padding="4" Margin="0,2"
                                                        Background="{StaticResource BackgroundMediumBrush}"
                                                        CornerRadius="4">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <StackPanel Grid.Column="0" Margin="4,0"
                                                                    Cursor="Hand"
                                                                    MouseLeftButtonDown="HideoutModuleName_Click">
                                                            <TextBlock Text="{Binding ModuleName}"
                                                                       FontSize="{DynamicResource FontSizeXSmall}" TextWrapping="Wrap">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                                                                        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=StackPanel}}" Value="True">
                                                                                <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                                                                                <Setter Property="TextDecorations" Value="Underline"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                            </TextBlock>
                                                            <TextBlock Text="{Binding LevelDisplay}"
                                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                                       FontSize="{DynamicResource FontSizeTiny}"/>
                                                        </StackPanel>

                                                        <StackPanel Grid.Column="1" Orientation="Horizontal"
                                                                    VerticalAlignment="Center" Margin="8,0,4,0">
                                                            <TextBlock Text="{Binding AmountDisplay}"
                                                                       Foreground="{StaticResource AccentBrush}"
                                                                       FontSize="{DynamicResource FontSizeSmall}" FontWeight="Bold"
                                                                       VerticalAlignment="Center"/>
                                                            <Border Padding="4,2" CornerRadius="2" Margin="6,0,0,0"
                                                                    Background="{StaticResource WarningBrush}"
                                                                    Visibility="{Binding FirVisibility}">
                                                                <TextBlock Text="FIR" FontSize="{DynamicResource FontSizeTiny}" Foreground="White"/>
                                                            </Border>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Border>
                            </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
        </Grid>

        <!-- Loading Overlay -->
        <Grid x:Name="LoadingOverlay" Visibility="Visible" Background="{StaticResource BackgroundDarkBrush}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar Height="4" Width="200" IsIndeterminate="True"
                             Foreground="{StaticResource AccentBrush}"
                             Background="{StaticResource BackgroundMediumBrush}"/>
                <TextBlock x:Name="LoadingStatusText"
                           Text="Loading items data..."
                           FontSize="{DynamicResource FontSizeSmall}" Margin="0,16,0,0"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
