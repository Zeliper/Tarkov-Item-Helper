<UserControl x:Class="TarkovHelper.Pages.HideoutPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900"
             Background="{StaticResource BackgroundDarkBrush}">

    <UserControl.Resources>
        <!-- Inherit FontFamily for all TextBlocks in this page -->
        <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}"/>

        <!-- Hideout Module List Item Template -->
        <DataTemplate x:Key="HideoutModuleItemTemplate">
            <Border x:Name="ItemBorder" Padding="12,8" BorderThickness="0,0,0,1"
                    BorderBrush="{StaticResource BorderBrush}"
                    Background="Transparent">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Module Icon -->
                    <Border Grid.Column="0" Width="36" Height="36"
                            CornerRadius="4" Background="{StaticResource BackgroundLightBrush}"
                            VerticalAlignment="Center">
                        <Image Source="{Binding IconSource}"
                               Width="32" Height="32"
                               Stretch="Uniform"
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                    </Border>

                    <!-- Module Name and Level -->
                    <StackPanel Grid.Column="1" Margin="12,0,8,0" VerticalAlignment="Center">
                        <TextBlock Text="{Binding DisplayName}" FontSize="{DynamicResource FontSizeSmall}"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   TextTrimming="CharacterEllipsis"/>
                        <TextBlock Text="{Binding SubtitleName}" FontSize="{DynamicResource FontSizeTiny}"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Visibility="{Binding SubtitleVisibility}"
                                   TextTrimming="CharacterEllipsis"/>
                    </StackPanel>

                    <!-- Level Display -->
                    <TextBlock Grid.Column="2" FontSize="{DynamicResource FontSizeSmall}"
                               Foreground="{StaticResource AccentBrush}"
                               VerticalAlignment="Center" Margin="0,0,12,0">
                        <Run Text="Lv."/><Run Text="{Binding CurrentLevel}"/>
                    </TextBlock>

                    <!-- Level Controls -->
                    <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Content="-" Width="28" Height="28" Padding="0"
                                Click="DecrementButton_Click"
                                Tag="{Binding}"
                                IsEnabled="{Binding CanDecrement}"/>
                        <Button Content="+" Width="28" Height="28" Padding="0" Margin="4,0,0,0"
                                Click="IncrementButton_Click"
                                Tag="{Binding}"
                                IsEnabled="{Binding CanIncrement}"/>
                    </StackPanel>
                </Grid>
            </Border>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                    <Setter TargetName="ItemBorder" Property="Background" Value="{StaticResource BackgroundLightBrush}"/>
                </DataTrigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="ItemBorder" Property="Background" Value="{StaticResource BackgroundMediumBrush}"/>
                </Trigger>
                <DataTrigger Binding="{Binding IsMaxLevel}" Value="True">
                    <Setter TargetName="ItemBorder" Property="Opacity" Value="0.7"/>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>

        <!-- ListBox Item Container Style -->
        <Style x:Key="HideoutListBoxItem" TargetType="ListBoxItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <ContentPresenter/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <!-- Main Content -->
        <Grid x:Name="MainContent" Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Search Bar -->
        <Border Grid.Row="0" Background="{StaticResource BackgroundMediumBrush}"
                CornerRadius="6" Padding="12,10" Margin="0,0,0,12">
            <TextBox x:Name="TxtSearch" TextChanged="TxtSearch_TextChanged">
                <TextBox.Style>
                    <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                        <Setter Property="Tag" Value="Search hideout modules..."/>
                    </Style>
                </TextBox.Style>
            </TextBox>
        </Border>

        <!-- Statistics Bar -->
        <Border Grid.Row="1" Padding="12,6" Margin="0,0,0,12">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="TxtStats" FontSize="{DynamicResource FontSizeXSmall}"
                           Foreground="{StaticResource TextSecondaryBrush}"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="300"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="380" MinWidth="280"/>
            </Grid.ColumnDefinitions>

            <!-- Module List -->
            <Border Grid.Column="0" Background="{StaticResource BackgroundMediumBrush}"
                    CornerRadius="6">
                <ListBox x:Name="LstModules"
                         Background="Transparent"
                         BorderThickness="0"
                         ItemTemplate="{StaticResource HideoutModuleItemTemplate}"
                         ItemContainerStyle="{StaticResource HideoutListBoxItem}"
                         SelectionChanged="LstModules_SelectionChanged"
                         VirtualizingPanel.IsVirtualizing="True"
                         VirtualizingPanel.VirtualizationMode="Recycling"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="8" Background="Transparent"
                          HorizontalAlignment="Center" VerticalAlignment="Stretch"/>

            <!-- Detail Panel -->
            <Border Grid.Column="2" Background="{StaticResource BackgroundMediumBrush}"
                    CornerRadius="6" Padding="16">
                <Grid>
                    <!-- Empty State -->
                    <TextBlock x:Name="TxtSelectModule"
                               Text="Select a module to view details"
                               FontSize="{DynamicResource FontSizeSmall}" Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>

                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="DetailPanel" Visibility="Collapsed">
                            <!-- Module Header -->
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Module Icon -->
                                <Border Grid.Column="0" Width="64" Height="64"
                                        CornerRadius="8" Background="{StaticResource BackgroundDarkBrush}"
                                        Margin="0,0,16,0">
                                    <Image x:Name="ImgDetailIcon"
                                           Width="56" Height="56"
                                           Stretch="Uniform"
                                           RenderOptions.BitmapScalingMode="HighQuality"/>
                                </Border>

                                <!-- Module Title -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock x:Name="TxtDetailName" FontSize="{DynamicResource FontSizeLarge}" FontWeight="SemiBold"
                                               Foreground="{StaticResource AccentBrush}"
                                               TextWrapping="Wrap"/>
                                    <TextBlock x:Name="TxtDetailSubtitle" FontSize="{DynamicResource FontSizeXSmall}"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               TextWrapping="Wrap" Margin="0,2,0,0"/>
                                </StackPanel>
                            </Grid>

                            <!-- Current Level -->
                            <Border Background="{StaticResource BackgroundDarkBrush}"
                                    CornerRadius="4" Padding="12" Margin="0,0,0,16">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Current Level: " FontSize="{DynamicResource FontSizeSmall}"
                                               Foreground="{StaticResource TextSecondaryBrush}"/>
                                    <TextBlock x:Name="TxtCurrentLevel" FontSize="{DynamicResource FontSizeSmall}" FontWeight="SemiBold"
                                               Foreground="{StaticResource AccentBrush}"/>
                                    <TextBlock Text=" / Max Level: " FontSize="{DynamicResource FontSizeSmall}"
                                               Foreground="{StaticResource TextSecondaryBrush}"/>
                                    <TextBlock x:Name="TxtMaxLevel" FontSize="{DynamicResource FontSizeSmall}"
                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                </StackPanel>
                            </Border>

                            <!-- Actions -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                <Button x:Name="BtnWiki" Content="Wiki" Padding="12,6"
                                        Margin="0,0,8,0" Click="BtnWiki_Click"/>
                            </StackPanel>

                            <!-- Next Level Requirements Section -->
                            <StackPanel x:Name="NextLevelSection">
                                <TextBlock x:Name="TxtNextLevelHeader" FontSize="{DynamicResource FontSizeSmall}" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           Margin="0,0,0,8"/>
                                <Border Background="{StaticResource BackgroundDarkBrush}"
                                        CornerRadius="4" Padding="12" Margin="0,0,0,16">
                                    <StackPanel>
                                        <!-- Items Required -->
                                        <TextBlock x:Name="TxtItemsHeader" Text="Items:" FontSize="{DynamicResource FontSizeSmall}" FontWeight="SemiBold"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   Margin="0,0,0,6"/>
                                        <ItemsControl x:Name="NextLevelItemsList" Margin="0,0,0,12">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal" Margin="0,4"
                                                                Opacity="{Binding ItemOpacity}"
                                                                Cursor="Hand"
                                                                MouseLeftButtonUp="ItemName_Click">
                                                        <!-- Item Icon -->
                                                        <Border Width="28" Height="28" CornerRadius="3"
                                                                Background="{StaticResource BackgroundMediumBrush}"
                                                                Margin="0,0,8,0">
                                                            <Grid>
                                                                <Image Source="{Binding IconSource}"
                                                                       Width="24" Height="24"
                                                                       Stretch="Uniform"/>
                                                                <!-- Fulfilled checkmark overlay -->
                                                                <TextBlock Text="&#x2713;" FontSize="{DynamicResource FontSizeSmall}" FontWeight="Bold"
                                                                           Foreground="{StaticResource SuccessBrush}"
                                                                           HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                                                           Margin="0,0,1,0"
                                                                           Visibility="{Binding FulfilledVisibility}"/>
                                                            </Grid>
                                                        </Border>
                                                        <TextBlock Text="{Binding DisplayText}"
                                                                   TextDecorations="{Binding TextDecorations}"
                                                                   FontSize="{DynamicResource FontSizeSmall}"
                                                                   VerticalAlignment="Center">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                                                                    <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsFulfilled}" Value="True">
                                                                            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                        <!-- FIR Badge -->
                                                        <Border Padding="5,2" CornerRadius="2" Margin="6,0,0,0"
                                                                Background="{StaticResource WarningBrush}"
                                                                Visibility="{Binding FirVisibility}"
                                                                VerticalAlignment="Center">
                                                            <TextBlock Text="FIR" FontSize="{DynamicResource FontSizeTiny}" Foreground="White"/>
                                                        </Border>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                        <!-- Traders Required -->
                                        <TextBlock x:Name="TxtTradersHeader" Text="Traders:" FontSize="{DynamicResource FontSizeXSmall}" FontWeight="SemiBold"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   Margin="0,0,0,6" Visibility="Collapsed"/>
                                        <ItemsControl x:Name="NextLevelTradersList" Margin="0,0,0,12" Visibility="Collapsed">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding DisplayText}"
                                                               Foreground="{StaticResource TextPrimaryBrush}" FontSize="{DynamicResource FontSizeXSmall}"
                                                               Margin="0,2"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                        <!-- Skills Required -->
                                        <TextBlock x:Name="TxtSkillsHeader" Text="Skills:" FontSize="{DynamicResource FontSizeXSmall}" FontWeight="SemiBold"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   Margin="0,0,0,6" Visibility="Collapsed"/>
                                        <ItemsControl x:Name="NextLevelSkillsList" Margin="0,0,0,12" Visibility="Collapsed">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding DisplayText}"
                                                               Foreground="{StaticResource TextPrimaryBrush}" FontSize="{DynamicResource FontSizeXSmall}"
                                                               Margin="0,2"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                        <!-- Other Modules Required -->
                                        <TextBlock x:Name="TxtModulesHeader" Text="Other Modules:" FontSize="{DynamicResource FontSizeXSmall}" FontWeight="SemiBold"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   Margin="0,0,0,6" Visibility="Collapsed"/>
                                        <ItemsControl x:Name="NextLevelModulesList" Visibility="Collapsed">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding DisplayText}"
                                                               Foreground="{StaticResource TextPrimaryBrush}" FontSize="{DynamicResource FontSizeXSmall}"
                                                               Margin="0,2"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <!-- Total Remaining Requirements -->
                            <TextBlock Text="Total Remaining Requirements" FontSize="{DynamicResource FontSizeSmall}" FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       Margin="0,0,0,8"/>
                            <Border Background="{StaticResource BackgroundDarkBrush}"
                                    CornerRadius="4" Padding="12">
                                <ItemsControl x:Name="TotalRemainingItemsList">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="0,4"
                                                        Opacity="{Binding ItemOpacity}"
                                                        Cursor="Hand"
                                                        MouseLeftButtonUp="ItemName_Click">
                                                <!-- Item Icon -->
                                                <Border Width="28" Height="28" CornerRadius="3"
                                                        Background="{StaticResource BackgroundMediumBrush}"
                                                        Margin="0,0,8,0">
                                                    <Grid>
                                                        <Image Source="{Binding IconSource}"
                                                               Width="24" Height="24"
                                                               Stretch="Uniform"/>
                                                        <!-- Fulfilled checkmark overlay -->
                                                        <TextBlock Text="&#x2713;" FontSize="{DynamicResource FontSizeSmall}" FontWeight="Bold"
                                                                   Foreground="{StaticResource SuccessBrush}"
                                                                   HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                                                   Margin="0,0,1,0"
                                                                   Visibility="{Binding FulfilledVisibility}"/>
                                                    </Grid>
                                                </Border>
                                                <TextBlock Text="{Binding DisplayText}"
                                                           TextDecorations="{Binding TextDecorations}"
                                                           FontSize="{DynamicResource FontSizeSmall}"
                                                           VerticalAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                                                            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsFulfilled}" Value="True">
                                                                    <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <!-- FIR Badge -->
                                                <Border Padding="5,2" CornerRadius="2" Margin="6,0,0,0"
                                                        Background="{StaticResource WarningBrush}"
                                                        Visibility="{Binding FirVisibility}"
                                                        VerticalAlignment="Center">
                                                    <TextBlock Text="FIR" FontSize="{DynamicResource FontSizeTiny}" Foreground="White"/>
                                                </Border>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
        </Grid>

        <!-- Loading Overlay -->
        <Grid x:Name="LoadingOverlay" Visibility="Visible" Background="{StaticResource BackgroundDarkBrush}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar Height="4" Width="200" IsIndeterminate="True"
                             Foreground="{StaticResource AccentBrush}"
                             Background="{StaticResource BackgroundMediumBrush}"/>
                <TextBlock x:Name="LoadingStatusText"
                           Text="Loading hideout data..."
                           FontSize="{DynamicResource FontSizeSmall}" Margin="0,16,0,0"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
