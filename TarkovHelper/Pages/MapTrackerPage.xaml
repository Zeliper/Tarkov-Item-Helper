<UserControl x:Class="TarkovHelper.Pages.MapTrackerPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="{StaticResource BackgroundDarkBrush}">
    <Grid>
        <Grid.RowDefinitions>
            <!-- 컨트롤 영역 -->
            <RowDefinition Height="Auto"/>
            <!-- 상태 표시 영역 -->
            <RowDefinition Height="Auto"/>
            <!-- 메인 콘텐츠 (맵 + 설정) -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 상단 컨트롤 바 -->
        <Border Grid.Row="0" Background="{StaticResource BackgroundMediumBrush}" Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 타이틀 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Map Position Tracker" FontSize="16" FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                </StackPanel>

                <!-- 맵 선택 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="24,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="Map:" Foreground="{StaticResource TextSecondaryBrush}"
                               VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox x:Name="CmbMapSelect" Width="160" SelectionChanged="CmbMapSelect_SelectionChanged"/>
                </StackPanel>

                <!-- 버튼들 -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="16,0">
                    <CheckBox x:Name="ChkShowQuestMarkers" Content="Quest Markers"
                              Foreground="{StaticResource TextPrimaryBrush}"
                              VerticalAlignment="Center" Margin="0,0,16,0"
                              IsChecked="True"
                              Checked="ChkShowQuestMarkers_Changed"
                              Unchecked="ChkShowQuestMarkers_Changed"/>
                    <CheckBox x:Name="ChkShowExtractMarkers" Content="Extracts"
                              Foreground="{StaticResource TextPrimaryBrush}"
                              VerticalAlignment="Center" Margin="0,0,16,0"
                              IsChecked="True"
                              Checked="ChkShowExtractMarkers_Changed"
                              Unchecked="ChkShowExtractMarkers_Changed"/>
                    <Button x:Name="BtnClearTrail" Content="Clear Trail" Padding="12,6"
                            Margin="0,0,8,0" Click="BtnClearTrail_Click"/>
                    <Button x:Name="BtnFullScreen" Content="Full Screen" Padding="12,6"
                            Margin="0,0,8,0" Click="BtnFullScreen_Click"/>
                    <Button x:Name="BtnSettings" Content="Settings" Padding="12,6"
                            Click="BtnSettings_Click"/>
                </StackPanel>

                <!-- 시작/중지 버튼 -->
                <Button x:Name="BtnToggleTracking" Grid.Column="3" Content="Start Tracking"
                        Padding="16,6" MinWidth="120" Click="BtnToggleTracking_Click"/>
            </Grid>
        </Border>

        <!-- 상태 표시 바 -->
        <Border Grid.Row="1" Background="{StaticResource BackgroundLightBrush}" Padding="16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 현재 좌표 정보 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Ellipse x:Name="StatusIndicator" Width="10" Height="10"
                             Fill="{StaticResource TextSecondaryBrush}" Margin="0,0,8,0"/>
                    <TextBlock x:Name="TxtStatus" Text="대기 중"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- 좌표 표시 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="24,0,0,0">
                    <TextBlock Text="위치:" Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <TextBlock x:Name="TxtCoordinates" Text="--" FontFamily="Consolas"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- 마지막 업데이트 시간 -->
                <TextBlock x:Name="TxtLastUpdate" Grid.Column="2" Text="마지막 업데이트: --"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- 메인 콘텐츠 영역 -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <!-- 퀘스트 상세 Drawer (왼쪽) -->
                <ColumnDefinition x:Name="QuestDrawerColumn" Width="0"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition x:Name="SettingsColumn" Width="0"/>
            </Grid.ColumnDefinitions>

            <!-- 퀘스트 상세 Drawer -->
            <Border x:Name="QuestDrawerPanel" Grid.Column="0"
                    Background="{StaticResource BackgroundMediumBrush}"
                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,1,0"
                    Visibility="Collapsed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Drawer 헤더 -->
                    <Border Grid.Row="0" Background="{StaticResource BackgroundLightBrush}" Padding="12,8">
                        <Grid>
                            <TextBlock Text="Quest Objectives" FontSize="14" FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       VerticalAlignment="Center"/>
                            <Button Content="✕" HorizontalAlignment="Right" Padding="8,4"
                                    Click="BtnCloseQuestDrawer_Click" Background="Transparent"
                                    BorderThickness="0"/>
                        </Grid>
                    </Border>

                    <!-- 퀘스트 목록 -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="QuestObjectivesList" Margin="12">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource BackgroundDarkBrush}"
                                            CornerRadius="4" Padding="12" Margin="0,0,0,8"
                                            Cursor="Hand"
                                            BorderBrush="{Binding SelectionBorderBrush}"
                                            BorderThickness="{Binding SelectionBorderThickness}"
                                            MouseLeftButtonDown="QuestObjectiveItem_Click">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- 체크박스 -->
                                            <CheckBox Grid.Column="0" VerticalAlignment="Top" Margin="0,2,12,0"
                                                      IsChecked="{Binding IsChecked, Mode=TwoWay}"
                                                      Checked="ObjectiveCheckBox_Checked"
                                                      Unchecked="ObjectiveCheckBox_Unchecked"
                                                      Tag="{Binding Objective}">
                                                <CheckBox.LayoutTransform>
                                                    <ScaleTransform ScaleX="1.5" ScaleY="1.5"/>
                                                </CheckBox.LayoutTransform>
                                            </CheckBox>

                                            <StackPanel Grid.Column="1">
                                                <!-- 퀘스트 이름 -->
                                                <TextBlock Text="{Binding QuestName}"
                                                           FontSize="13" FontWeight="SemiBold"
                                                           Foreground="{StaticResource AccentBrush}"
                                                           TextWrapping="Wrap" Margin="0,0,0,4"
                                                           TextDecorations="{Binding TextDecoration}"/>
                                                <!-- 목표 타입 배지 -->
                                                <Border Background="{Binding TypeBrush}"
                                                        CornerRadius="3" Padding="6,2"
                                                        HorizontalAlignment="Left" Margin="0,0,0,6"
                                                        Opacity="{Binding ContentOpacity}">
                                                    <TextBlock Text="{Binding TypeDisplay}"
                                                               FontSize="10" Foreground="White" FontWeight="SemiBold"/>
                                                </Border>
                                                <!-- 목표 설명 -->
                                                <TextBlock Text="{Binding Description}"
                                                           FontSize="12"
                                                           Foreground="{StaticResource TextSecondaryBrush}"
                                                           TextWrapping="Wrap"
                                                           Opacity="{Binding ContentOpacity}"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- 맵 뷰어 -->
            <Border Grid.Column="1" Background="{StaticResource BackgroundDarkBrush}"
                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0"
                    ClipToBounds="True">
                <Grid x:Name="MapViewerGrid"
                      Background="Transparent"
                      MouseLeftButtonDown="MapViewer_MouseLeftButtonDown"
                      MouseLeftButtonUp="MapViewer_MouseLeftButtonUp"
                      MouseMove="MapViewer_MouseMove"
                      MouseWheel="MapViewer_MouseWheel">
                    <!-- 줌 컨트롤 -->
                    <Border HorizontalAlignment="Right" VerticalAlignment="Top"
                            Margin="0,8,24,0" Panel.ZIndex="100"
                            Background="{StaticResource BackgroundMediumBrush}"
                            CornerRadius="4" Padding="8,4">
                        <StackPanel Orientation="Horizontal">
                            <Button Content="-" Width="28" Height="28" Padding="0"
                                    Click="BtnZoomOut_Click" Margin="0,0,4,0"/>
                            <ComboBox x:Name="CmbZoomLevel" Width="80"
                                      SelectionChanged="CmbZoomLevel_SelectionChanged"
                                      KeyDown="CmbZoomLevel_KeyDown"
                                      IsEditable="True"
                                      SelectedIndex="3"/>
                            <Button Content="+" Width="28" Height="28" Padding="0"
                                    Click="BtnZoomIn_Click" Margin="4,0,4,0"/>
                            <Button x:Name="BtnResetView" Content="Reset" Padding="8,4"
                                    Click="BtnResetView_Click" Margin="4,0,0,0"/>
                            <!-- Exit Full Screen 버튼 (전체화면 모드에서만 표시) -->
                            <Button x:Name="BtnExitFullScreen" Content="Exit Full Screen" Padding="8,4"
                                    Click="BtnExitFullScreen_Click" Margin="8,0,0,0"
                                    Visibility="Collapsed"/>
                        </StackPanel>
                    </Border>

                    <!-- 맵 캔버스 (테스트: Transform 비활성화) -->
                    <Canvas x:Name="MapCanvas" Background="{StaticResource BackgroundMediumBrush}"
                            HorizontalAlignment="Left" VerticalAlignment="Top"
                            Cursor="Arrow">
                        <Canvas.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform x:Name="MapScale" ScaleX="1" ScaleY="1"/>
                                <TranslateTransform x:Name="MapTranslate" X="0" Y="0"/>
                            </TransformGroup>
                        </Canvas.RenderTransform>

                            <!-- 맵 이미지 (PNG/JPG) -->
                            <Image x:Name="MapImage" Stretch="None"
                                   RenderOptions.BitmapScalingMode="HighQuality" Visibility="Collapsed"/>

                            <!-- 맵 이미지 (SVG) -->
                            <svgc:SvgViewbox x:Name="MapSvg" Stretch="Fill" Visibility="Collapsed"/>

                            <!-- 탈출구 마커 컨테이너 -->
                            <Canvas x:Name="ExtractMarkersContainer"/>

                            <!-- 퀘스트 목표 마커 컨테이너 -->
                            <Canvas x:Name="QuestMarkersContainer"/>

                            <!-- 이동 경로 (Polyline) -->
                            <Polyline x:Name="TrailPath" Stroke="#80FF5722"
                                      StrokeThickness="2" StrokeLineJoin="Round"/>

                            <!-- 플레이어 마커 (방향 표시 - 화살표 + 원) -->
                            <Canvas x:Name="PlayerMarker" Visibility="Collapsed">
                                <Canvas.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform x:Name="MarkerScale" ScaleX="1" ScaleY="1"/>
                                        <TranslateTransform x:Name="MarkerTranslation" X="0" Y="0"/>
                                    </TransformGroup>
                                </Canvas.RenderTransform>

                                <!-- 외곽 글로우 효과 -->
                                <Ellipse Width="28" Height="28" Canvas.Left="-14" Canvas.Top="-14"
                                         Fill="#40FF5722"/>

                                <!-- 중심 원 -->
                                <Ellipse Width="16" Height="16" Canvas.Left="-8" Canvas.Top="-8"
                                         Fill="#FFFF5722" Stroke="#FFFFFFFF" StrokeThickness="2"/>

                                <!-- 방향 화살표 -->
                                <Path x:Name="DirectionArrow" Fill="#FFFF5722" Stroke="#FFFFFFFF" StrokeThickness="1">
                                    <Path.Data>
                                        <PathGeometry>
                                            <PathFigure StartPoint="0,-24" IsClosed="True">
                                                <LineSegment Point="6,-12"/>
                                                <LineSegment Point="2,-12"/>
                                                <LineSegment Point="2,-8"/>
                                                <LineSegment Point="-2,-8"/>
                                                <LineSegment Point="-2,-12"/>
                                                <LineSegment Point="-6,-12"/>
                                            </PathFigure>
                                        </PathGeometry>
                                    </Path.Data>
                                    <Path.RenderTransform>
                                        <RotateTransform x:Name="MarkerRotation" Angle="0" CenterX="0" CenterY="0"/>
                                    </Path.RenderTransform>
                                </Path>
                            </Canvas>

                            <!-- 방향 표시가 없을 때 사용하는 원형 마커 -->
                            <Canvas x:Name="PlayerDot" Visibility="Collapsed">
                                <Canvas.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform x:Name="DotScale" ScaleX="1" ScaleY="1"/>
                                        <TranslateTransform x:Name="DotTranslation" X="0" Y="0"/>
                                    </TransformGroup>
                                </Canvas.RenderTransform>

                                <!-- 외곽 글로우 효과 -->
                                <Ellipse Width="28" Height="28" Canvas.Left="-14" Canvas.Top="-14"
                                         Fill="#40FF5722"/>

                                <!-- 중심 원 -->
                                <Ellipse Width="16" Height="16" Canvas.Left="-8" Canvas.Top="-8"
                                         Fill="#FFFF5722" Stroke="#FFFFFFFF" StrokeThickness="2"/>
                            </Canvas>
                        </Canvas>

                    <!-- 맵 없음 안내 -->
                    <StackPanel x:Name="NoMapPanel" HorizontalAlignment="Center"
                                VerticalAlignment="Center" Visibility="Visible">
                        <TextBlock Text="맵 이미지가 없습니다" FontSize="18"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Assets/Maps/ 폴더에 맵 이미지를 추가하세요" FontSize="12"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   HorizontalAlignment="Center" Margin="0,8,0,0"/>
                        <TextBlock Text="또는 설정에서 이미지 경로를 지정하세요" FontSize="12"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- 설정 패널 (토글 가능) -->
            <Border x:Name="SettingsPanel" Grid.Column="2"
                    Background="{StaticResource BackgroundMediumBrush}"
                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="1,1,0,0"
                    Visibility="Collapsed">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="16">
                        <!-- 설정 헤더 -->
                        <Grid Margin="0,0,0,16">
                            <TextBlock Text="Settings" FontSize="16" FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                            <Button Content="✕" HorizontalAlignment="Right" Padding="8,4"
                                    Click="BtnCloseSettings_Click" Background="Transparent"
                                    BorderThickness="0"/>
                        </Grid>

                        <!-- 스크린샷 폴더 설정 -->
                        <TextBlock Text="Screenshot Folder" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,8"/>
                        <TextBox x:Name="TxtScreenshotFolder" IsReadOnly="True" Margin="0,0,0,8"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                            <Button x:Name="BtnAutoDetect" Content="Auto Detect" Padding="12,6"
                                    Margin="0,0,8,0" Click="BtnAutoDetect_Click"/>
                            <Button x:Name="BtnBrowseFolder" Content="Browse" Padding="12,6"
                                    Click="BtnBrowseFolder_Click"/>
                        </StackPanel>

                        <!-- 마커 설정 -->
                        <TextBlock Text="Marker Settings" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,8"/>

                        <!-- 완료된 퀘스트 목표 숨기기 -->
                        <CheckBox x:Name="ChkHideCompletedObjectives" Content="Hide Completed Objectives"
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  Margin="0,0,0,12" IsChecked="False"
                                  Checked="ChkHideCompletedObjectives_Changed"
                                  Unchecked="ChkHideCompletedObjectives_Changed"/>

                        <!-- 퀘스트 마커 스타일 -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="Quest Style:" Foreground="{StaticResource TextSecondaryBrush}"
                                       VerticalAlignment="Center" Width="100"/>
                            <ComboBox x:Name="CmbQuestMarkerStyle" Width="160"
                                      SelectionChanged="CmbQuestMarkerStyle_SelectionChanged">
                                <ComboBoxItem Content="Icon Only" Tag="Default"/>
                                <ComboBoxItem Content="Green Circle" Tag="GreenCircle"/>
                                <ComboBoxItem Content="Icon + Name" Tag="DefaultWithName"/>
                                <ComboBoxItem Content="Circle + Name" Tag="GreenCircleWithName"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- 퀘스트명 텍스트 크기 -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="Quest Name:" Foreground="{StaticResource TextSecondaryBrush}"
                                       VerticalAlignment="Center" Width="100"/>
                            <Slider x:Name="SliderQuestNameTextSize" Width="120" Minimum="8" Maximum="50"
                                    Value="12" ValueChanged="SliderQuestNameTextSize_ValueChanged"/>
                            <TextBlock x:Name="TxtQuestNameTextSize" Text="12" Width="30"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       VerticalAlignment="Center" Margin="8,0,0,0"/>
                        </StackPanel>

                        <!-- 퀘스트 마커 크기 -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="Quest Marker:" Foreground="{StaticResource TextSecondaryBrush}"
                                       VerticalAlignment="Center" Width="100"/>
                            <Slider x:Name="SliderMarkerSize" Width="120" Minimum="8" Maximum="48"
                                    Value="16" ValueChanged="SliderMarkerSize_ValueChanged"/>
                            <TextBlock x:Name="TxtMarkerSize" Text="16" Width="30"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       VerticalAlignment="Center" Margin="8,0,0,0"/>
                        </StackPanel>

                        <!-- 플레이어 위치 마커 크기 -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                            <TextBlock Text="Player Marker:" Foreground="{StaticResource TextSecondaryBrush}"
                                       VerticalAlignment="Center" Width="100"/>
                            <Slider x:Name="SliderPlayerMarkerSize" Width="120" Minimum="8" Maximum="64"
                                    Value="16" ValueChanged="SliderPlayerMarkerSize_ValueChanged"/>
                            <TextBlock x:Name="TxtPlayerMarkerSize" Text="16" Width="30"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       VerticalAlignment="Center" Margin="8,0,0,0"/>
                        </StackPanel>

                        <!-- 탈출구 설정 -->
                        <TextBlock Text="Extract Settings" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,8"/>

                        <CheckBox x:Name="ChkShowPmcExtracts" Content="PMC Extracts"
                                  Foreground="#4CAF50" FontWeight="SemiBold"
                                  Margin="0,0,0,6" IsChecked="True"
                                  Checked="ChkExtractFilter_Changed"
                                  Unchecked="ChkExtractFilter_Changed"/>

                        <CheckBox x:Name="ChkShowScavExtracts" Content="Scav Extracts"
                                  Foreground="#FFB74D" FontWeight="SemiBold"
                                  Margin="0,0,0,12" IsChecked="True"
                                  Checked="ChkExtractFilter_Changed"
                                  Unchecked="ChkExtractFilter_Changed"/>

                        <!-- 탈출구 이름 텍스트 크기 -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="Name Size:" Foreground="{StaticResource TextSecondaryBrush}"
                                       VerticalAlignment="Center" Width="100"/>
                            <Slider x:Name="SliderExtractTextSize" Width="120" Minimum="6" Maximum="20"
                                    Value="10" ValueChanged="SliderExtractTextSize_ValueChanged"/>
                            <TextBlock x:Name="TxtExtractTextSize" Text="10" Width="30"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       VerticalAlignment="Center" Margin="8,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>
