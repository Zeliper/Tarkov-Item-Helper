<UserControl x:Class="TarkovHelper.Pages.QuestListPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900"
             Background="{StaticResource BackgroundDarkBrush}">

    <UserControl.Resources>
        <!-- Status Badge Colors -->
        <SolidColorBrush x:Key="StatusLockedBrush" Color="#666666"/>
        <SolidColorBrush x:Key="StatusActiveBrush" Color="#4CAF50"/>
        <SolidColorBrush x:Key="StatusDoneBrush" Color="#2196F3"/>
        <SolidColorBrush x:Key="StatusFailedBrush" Color="#F44336"/>

        <!-- CheckBox Style for Filters -->
        <Style x:Key="FilterCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,16,0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Quest List Item Template -->
        <DataTemplate x:Key="QuestItemTemplate">
            <Border x:Name="ItemBorder" Padding="12,8" BorderThickness="0,0,0,1"
                    BorderBrush="{StaticResource BorderBrush}"
                    Background="Transparent">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="32"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Trader Icon Placeholder -->
                    <Border Grid.Column="0" Width="28" Height="28"
                            CornerRadius="4" Background="{StaticResource BackgroundLightBrush}"
                            VerticalAlignment="Center">
                        <TextBlock Text="{Binding TraderInitial}" FontSize="12" FontWeight="Bold"
                                   Foreground="{StaticResource AccentBrush}"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <!-- Quest Name -->
                    <StackPanel Grid.Column="1" Margin="12,0,8,0" VerticalAlignment="Center">
                        <TextBlock Text="{Binding DisplayName}" FontSize="13"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   TextTrimming="CharacterEllipsis"/>
                        <TextBlock Text="{Binding SubtitleName}" FontSize="10"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Visibility="{Binding SubtitleVisibility}"
                                   TextTrimming="CharacterEllipsis"/>
                    </StackPanel>

                    <!-- Status Badge -->
                    <Border Grid.Column="2" Padding="8,3" CornerRadius="3"
                            Background="{Binding StatusBackground}"
                            VerticalAlignment="Center" Margin="0,0,8,0">
                        <TextBlock Text="{Binding StatusText}" FontSize="10"
                                   Foreground="White" FontWeight="SemiBold"/>
                    </Border>

                    <!-- Complete Button -->
                    <Button Grid.Column="3" Content="Done" Padding="8,4"
                            FontSize="11" MinWidth="50"
                            Click="CompleteButton_Click"
                            Tag="{Binding}"
                            Visibility="{Binding CompleteButtonVisibility}"/>
                </Grid>
            </Border>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                    <Setter TargetName="ItemBorder" Property="Background" Value="{StaticResource BackgroundLightBrush}"/>
                </DataTrigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="ItemBorder" Property="Background" Value="{StaticResource BackgroundMediumBrush}"/>
                </Trigger>
            </DataTemplate.Triggers>
        </DataTemplate>

        <!-- ListBox Item Container Style -->
        <Style x:Key="QuestListBoxItem" TargetType="ListBoxItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <ContentPresenter/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Filter Bar -->
        <Border Grid.Row="0" Background="{StaticResource BackgroundMediumBrush}"
                CornerRadius="6" Padding="12,10" Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search Box -->
                <TextBox x:Name="TxtSearch" Grid.Column="0"
                         TextChanged="TxtSearch_TextChanged"
                         Margin="0,0,16,0">
                    <TextBox.Style>
                        <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                            <Setter Property="Tag" Value="Search quests..."/>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <!-- Filter Toggles -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <CheckBox x:Name="ChkKappaOnly" Content="Kappa"
                              Style="{StaticResource FilterCheckBox}"
                              Checked="Filter_Changed" Unchecked="Filter_Changed"/>

                    <CheckBox x:Name="ChkItemRequired" Content="Item Req"
                              Style="{StaticResource FilterCheckBox}"
                              Checked="Filter_Changed" Unchecked="Filter_Changed"/>

                    <!-- Trader Filter -->
                    <ComboBox x:Name="CmbTrader" Width="120" Margin="0,0,16,0"
                              SelectionChanged="CmbTrader_SelectionChanged">
                        <ComboBoxItem Content="All Traders" Tag="" IsSelected="True"/>
                    </ComboBox>

                    <!-- Map Filter -->
                    <ComboBox x:Name="CmbMap" Width="120" Margin="0,0,16,0"
                              SelectionChanged="CmbMap_SelectionChanged">
                        <ComboBoxItem Content="All Maps" Tag="" IsSelected="True"/>
                    </ComboBox>

                    <!-- Status Filter -->
                    <ComboBox x:Name="CmbStatus" Width="100"
                              SelectionChanged="CmbStatus_SelectionChanged">
                        <ComboBoxItem Content="Active" Tag="Active" IsSelected="True"/>
                        <ComboBoxItem Content="All" Tag="All"/>
                        <ComboBoxItem Content="Locked" Tag="Locked"/>
                        <ComboBoxItem Content="Done" Tag="Done"/>
                        <ComboBoxItem Content="Failed" Tag="Failed"/>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Statistics Bar -->
        <Border Grid.Row="1" Padding="12,6" Margin="0,0,0,12">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="TxtStats" FontSize="12"
                           Foreground="{StaticResource TextSecondaryBrush}"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="300"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="350" MinWidth="250"/>
            </Grid.ColumnDefinitions>

            <!-- Quest List -->
            <Border Grid.Column="0" Background="{StaticResource BackgroundMediumBrush}"
                    CornerRadius="6">
                <ListBox x:Name="LstQuests"
                         Background="Transparent"
                         BorderThickness="0"
                         ItemTemplate="{StaticResource QuestItemTemplate}"
                         ItemContainerStyle="{StaticResource QuestListBoxItem}"
                         SelectionChanged="LstQuests_SelectionChanged"
                         VirtualizingPanel.IsVirtualizing="True"
                         VirtualizingPanel.VirtualizationMode="Recycling"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="8" Background="Transparent"
                          HorizontalAlignment="Center" VerticalAlignment="Stretch"/>

            <!-- Detail Panel -->
            <Border Grid.Column="2" Background="{StaticResource BackgroundMediumBrush}"
                    CornerRadius="6" Padding="16">
                <Grid>
                    <!-- Empty State -->
                    <TextBlock x:Name="TxtSelectQuest"
                               Text="Select a quest to view details"
                               FontSize="14" Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>

                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="DetailPanel" Visibility="Collapsed">
                        <!-- Quest Title -->
                        <TextBlock x:Name="TxtDetailName" FontSize="18" FontWeight="SemiBold"
                                   Foreground="{StaticResource AccentBrush}"
                                   TextWrapping="Wrap" Margin="0,0,0,4"/>
                        <TextBlock x:Name="TxtDetailSubtitle" FontSize="12"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   TextWrapping="Wrap" Margin="0,0,0,8"/>

                        <!-- Actions (Top) -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <Button x:Name="BtnWiki" Content="Wiki" Padding="12,6"
                                    Margin="0,0,8,0" Click="BtnWiki_Click"/>
                            <Button x:Name="BtnComplete" Content="Mark Complete" Padding="12,6"
                                    Margin="0,0,8,0" Click="BtnComplete_Click"/>
                            <Button x:Name="BtnReset" Content="Reset" Padding="12,6"
                                    Click="BtnReset_Click"/>
                        </StackPanel>

                        <!-- Trader & Status -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="Trader: " FontSize="12"
                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBlock x:Name="TxtDetailTrader" FontSize="12"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock Text="  |  Status: " FontSize="12"
                                       Foreground="{StaticResource TextSecondaryBrush}" Margin="8,0,0,0"/>
                            <Border x:Name="DetailStatusBadge" Padding="6,2" CornerRadius="3">
                                <TextBlock x:Name="TxtDetailStatus" FontSize="10"
                                           Foreground="White" FontWeight="SemiBold"/>
                            </Border>
                        </StackPanel>

                        <!-- Map -->
                        <StackPanel x:Name="MapInfoPanel" Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBlock Text="Map: " FontSize="12"
                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBlock x:Name="TxtDetailMap" FontSize="12"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                        </StackPanel>

                        <!-- Requirements Section -->
                        <TextBlock Text="Requirements" FontSize="14" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   Margin="0,0,0,8"/>
                        <Border Background="{StaticResource BackgroundDarkBrush}"
                                CornerRadius="4" Padding="12" Margin="0,0,0,16">
                            <StackPanel x:Name="RequirementsPanel">
                                <TextBlock x:Name="TxtRequiredLevel" FontSize="12"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           Margin="0,0,0,4"/>
                            </StackPanel>
                        </Border>

                        <!-- Guide Section -->
                        <StackPanel x:Name="GuideSection" Visibility="Collapsed">
                            <TextBlock Text="Guide" FontSize="14" FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       Margin="0,0,0,8"/>
                            <Border Background="{StaticResource BackgroundDarkBrush}"
                                    CornerRadius="4" Padding="12" Margin="0,0,0,16">
                                <StackPanel>
                                    <!-- Guide Text with Expander -->
                                    <Expander x:Name="GuideTextExpander" IsExpanded="False"
                                              Margin="0,0,0,8">
                                        <Expander.Header>
                                            <TextBlock Text="View Guide Text" FontSize="11"
                                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                                        </Expander.Header>
                                        <TextBlock x:Name="TxtGuideText" FontSize="12"
                                                   Foreground="{StaticResource TextPrimaryBrush}"
                                                   TextWrapping="Wrap" Margin="0,8,0,0"/>
                                    </Expander>

                                    <!-- Guide Images Gallery -->
                                    <ItemsControl x:Name="GuideImagesList" Margin="0,8,0,0">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Margin="0,0,8,8" BorderThickness="1"
                                                        BorderBrush="{StaticResource BorderBrush}"
                                                        CornerRadius="4" Background="{StaticResource BackgroundMediumBrush}"
                                                        Cursor="Hand" MouseLeftButtonDown="GuideImage_Click">
                                                    <StackPanel>
                                                        <Image Source="{Binding ImageSource}"
                                                               Width="140" Height="80"
                                                               Stretch="UniformToFill"
                                                               RenderOptions.BitmapScalingMode="HighQuality"/>
                                                        <TextBlock Text="{Binding Caption}" FontSize="9"
                                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                                   TextTrimming="CharacterEllipsis"
                                                                   TextAlignment="Center"
                                                                   MaxWidth="140" Margin="4,2"
                                                                   Visibility="{Binding CaptionVisibility}"/>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- Prerequisites Section -->
                        <TextBlock Text="Prerequisites" FontSize="14" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   Margin="0,0,0,8"/>
                        <Border Background="{StaticResource BackgroundDarkBrush}"
                                CornerRadius="4" Padding="12" Margin="0,0,0,16">
                            <ItemsControl x:Name="PrerequisitesList">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="0,2">
                                            <TextBlock Text="- " Foreground="{StaticResource TextSecondaryBrush}"/>
                                            <TextBlock Text="{Binding DisplayName}"
                                                       Foreground="{StaticResource TextPrimaryBrush}" FontSize="12"/>
                                            <Border Padding="4,1" CornerRadius="2" Margin="8,0,0,0"
                                                    Background="{Binding StatusBackground}">
                                                <TextBlock Text="{Binding StatusText}" FontSize="9"
                                                           Foreground="White"/>
                                            </Border>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Border>

                        <!-- Required Items Section -->
                        <TextBlock Text="Required Items" FontSize="14" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   Margin="0,0,0,8"
                                   x:Name="TxtRequiredItemsHeader"/>
                        <Border Background="{StaticResource BackgroundDarkBrush}"
                                CornerRadius="4" Padding="12" Margin="0,0,0,16"
                                x:Name="RequiredItemsSection">
                            <ItemsControl x:Name="RequiredItemsList">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="0,4">
                                            <!-- Item Icon -->
                                            <Border Width="32" Height="32" CornerRadius="4"
                                                    Background="{StaticResource BackgroundMediumBrush}"
                                                    Margin="0,0,8,0">
                                                <Image Source="{Binding IconSource}"
                                                       Width="28" Height="28"
                                                       Stretch="Uniform"
                                                       RenderOptions.BitmapScalingMode="HighQuality"/>
                                            </Border>
                                            <!-- Item Info -->
                                            <StackPanel VerticalAlignment="Center">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding DisplayText}"
                                                               Foreground="{StaticResource TextPrimaryBrush}" FontSize="12"/>
                                                    <Border Padding="4,1" CornerRadius="2" Margin="8,0,0,0"
                                                            Background="{StaticResource WarningBrush}"
                                                            Visibility="{Binding FirVisibility}">
                                                        <TextBlock Text="FIR" FontSize="9" Foreground="White"/>
                                                    </Border>
                                                </StackPanel>
                                                <TextBlock Text="{Binding RequirementType}" FontSize="10"
                                                           Foreground="{StaticResource TextSecondaryBrush}"
                                                           Visibility="{Binding RequirementTypeVisibility}"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
