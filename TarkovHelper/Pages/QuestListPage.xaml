<UserControl x:Class="TarkovHelper.Pages.QuestListPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900"
             Background="{StaticResource BackgroundDarkBrush}">

    <UserControl.Resources>
        <!-- Inherit FontFamily for all TextBlocks in this page -->
        <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}"/>

        <!-- Status Badge Colors -->
        <SolidColorBrush x:Key="StatusLockedBrush" Color="#666666"/>
        <SolidColorBrush x:Key="StatusActiveBrush" Color="#4CAF50"/>
        <SolidColorBrush x:Key="StatusDoneBrush" Color="#2196F3"/>
        <SolidColorBrush x:Key="StatusFailedBrush" Color="#F44336"/>

        <!-- CheckBox Style for Filters -->
        <Style x:Key="FilterCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,16,0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Quest List Item Template -->
        <DataTemplate x:Key="QuestItemTemplate">
            <Border x:Name="ItemBorder" Padding="12,8" BorderThickness="0,0,0,1"
                    BorderBrush="{StaticResource BorderBrush}"
                    Background="Transparent">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="32"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Trader Icon Placeholder -->
                    <Border Grid.Column="0" Width="28" Height="28"
                            CornerRadius="4" Background="{StaticResource BackgroundLightBrush}"
                            VerticalAlignment="Center">
                        <TextBlock Text="{Binding TraderInitial}" FontSize="{DynamicResource FontSizeXSmall}" FontWeight="Bold"
                                   Foreground="{StaticResource AccentBrush}"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <!-- Quest Name -->
                    <StackPanel Grid.Column="1" Margin="12,0,8,0" VerticalAlignment="Center">
                        <TextBlock Text="{Binding DisplayName}" FontSize="{DynamicResource FontSizeSmall}"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   TextTrimming="CharacterEllipsis"/>
                        <TextBlock Text="{Binding SubtitleName}" FontSize="{DynamicResource FontSizeTiny}"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Visibility="{Binding SubtitleVisibility}"
                                   TextTrimming="CharacterEllipsis"/>
                    </StackPanel>

                    <!-- Kappa Badge -->
                    <Border Grid.Column="2" Padding="4,2" CornerRadius="3"
                            Background="#9C27B0"
                            VerticalAlignment="Center" Margin="0,0,6,0"
                            Visibility="{Binding KappaBadgeVisibility}"
                            ToolTip="Required for Kappa Container">
                        <TextBlock Text="κ" FontSize="{DynamicResource FontSizeTiny}"
                                   Foreground="White" FontWeight="Bold"/>
                    </Border>

                    <!-- Status Badge -->
                    <Border Grid.Column="3" Padding="8,3" CornerRadius="3"
                            Background="{Binding StatusBackground}"
                            VerticalAlignment="Center" Margin="0,0,8,0">
                        <TextBlock Text="{Binding StatusText}" FontSize="{DynamicResource FontSizeTiny}"
                                   Foreground="White" FontWeight="SemiBold"/>
                    </Border>

                    <!-- Complete Button -->
                    <Button Grid.Column="4" Content="Done" Padding="8,4"
                            FontSize="{DynamicResource FontSizeTiny}" MinWidth="50"
                            Click="CompleteButton_Click"
                            Tag="{Binding}"
                            Visibility="{Binding CompleteButtonVisibility}"/>
                </Grid>
            </Border>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                    <Setter TargetName="ItemBorder" Property="Background" Value="{StaticResource BackgroundLightBrush}"/>
                </DataTrigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="ItemBorder" Property="Background" Value="{StaticResource BackgroundMediumBrush}"/>
                </Trigger>
            </DataTemplate.Triggers>
        </DataTemplate>

        <!-- ListBox Item Container Style -->
        <Style x:Key="QuestListBoxItem" TargetType="ListBoxItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Border" Background="{TemplateBinding Background}"
                                BorderThickness="0,0,0,0">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource BackgroundLightBrush}"/>
                                <Setter TargetName="Border" Property="BorderThickness" Value="3,0,0,0"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource BackgroundMediumBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Filter Bar -->
        <Border Grid.Row="0" Background="{StaticResource BackgroundMediumBrush}"
                CornerRadius="6" Padding="12,10" Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search Box -->
                <TextBox x:Name="TxtSearch" Grid.Column="0"
                         TextChanged="TxtSearch_TextChanged"
                         Margin="0,0,16,0">
                    <TextBox.Style>
                        <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                            <Setter Property="Tag" Value="Search quests..."/>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <!-- Filter Toggles -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <CheckBox x:Name="ChkKappaOnly" Content="Kappa"
                              Style="{StaticResource FilterCheckBox}"
                              Checked="Filter_Changed" Unchecked="Filter_Changed"/>

                    <CheckBox x:Name="ChkItemRequired" Content="Item Req"
                              Style="{StaticResource FilterCheckBox}"
                              Checked="Filter_Changed" Unchecked="Filter_Changed"/>

                    <!-- Trader Filter -->
                    <ComboBox x:Name="CmbTrader" Width="120" Margin="0,0,16,0"
                              SelectionChanged="CmbTrader_SelectionChanged">
                        <ComboBoxItem Content="All Traders" Tag="" IsSelected="True"/>
                    </ComboBox>

                    <!-- Map Filter -->
                    <ComboBox x:Name="CmbMap" Width="120" Margin="0,0,16,0"
                              SelectionChanged="CmbMap_SelectionChanged">
                        <ComboBoxItem Content="All Maps" Tag="" IsSelected="True"/>
                    </ComboBox>

                    <!-- Status Filter -->
                    <ComboBox x:Name="CmbStatus" Width="110"
                              SelectionChanged="CmbStatus_SelectionChanged">
                        <ComboBoxItem Content="Active" Tag="Active" IsSelected="True"/>
                        <ComboBoxItem Content="All" Tag="All"/>
                        <ComboBoxItem Content="Locked" Tag="Locked"/>
                        <ComboBoxItem Content="Level Locked" Tag="LevelLocked"/>
                        <ComboBoxItem Content="Done" Tag="Done"/>
                        <ComboBoxItem Content="Failed" Tag="Failed"/>
                    </ComboBox>

                    <!-- Faction Toggle -->
                    <Border Margin="16,0,0,0" Background="{StaticResource BackgroundDarkBrush}"
                            CornerRadius="4" Padding="2">
                        <StackPanel Orientation="Horizontal">
                            <RadioButton x:Name="RbBear" Content="BEAR" GroupName="Faction"
                                         Margin="0" Padding="8,4" Cursor="Hand"
                                         Checked="Faction_Changed">
                                <RadioButton.Template>
                                    <ControlTemplate TargetType="RadioButton">
                                        <Border x:Name="Border" Background="Transparent"
                                                CornerRadius="3" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#D84315"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="{StaticResource BackgroundLightBrush}"/>
                                            </Trigger>
                                            <MultiTrigger>
                                                <MultiTrigger.Conditions>
                                                    <Condition Property="IsChecked" Value="True"/>
                                                    <Condition Property="IsMouseOver" Value="True"/>
                                                </MultiTrigger.Conditions>
                                                <Setter TargetName="Border" Property="Background" Value="#BF360C"/>
                                            </MultiTrigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </RadioButton.Template>
                                <RadioButton.Foreground>
                                    <SolidColorBrush Color="White"/>
                                </RadioButton.Foreground>
                            </RadioButton>
                            <RadioButton x:Name="RbUsec" Content="USEC" GroupName="Faction"
                                         Margin="0" Padding="8,4" Cursor="Hand"
                                         Checked="Faction_Changed">
                                <RadioButton.Template>
                                    <ControlTemplate TargetType="RadioButton">
                                        <Border x:Name="Border" Background="Transparent"
                                                CornerRadius="3" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#1565C0"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="{StaticResource BackgroundLightBrush}"/>
                                            </Trigger>
                                            <MultiTrigger>
                                                <MultiTrigger.Conditions>
                                                    <Condition Property="IsChecked" Value="True"/>
                                                    <Condition Property="IsMouseOver" Value="True"/>
                                                </MultiTrigger.Conditions>
                                                <Setter TargetName="Border" Property="Background" Value="#0D47A1"/>
                                            </MultiTrigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </RadioButton.Template>
                                <RadioButton.Foreground>
                                    <SolidColorBrush Color="White"/>
                                </RadioButton.Foreground>
                            </RadioButton>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Statistics Bar -->
        <Border Grid.Row="1" Padding="12,6" Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="TxtStats" Grid.Column="0" FontSize="{DynamicResource FontSizeXSmall}"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           VerticalAlignment="Center"/>

                <!-- Kappa Progress Gauge -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="κ" FontSize="{DynamicResource FontSizeSmall}" FontWeight="Bold"
                               Foreground="#9C27B0" VerticalAlignment="Center"
                               Margin="0,0,6,0"/>
                    <Grid Width="120" Height="16" VerticalAlignment="Center">
                        <Border Background="#333333" CornerRadius="3"/>
                        <Border x:Name="KappaGaugeBar" Background="#9C27B0"
                                CornerRadius="3" HorizontalAlignment="Left" Width="0"/>
                        <TextBlock x:Name="TxtKappaGauge"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   FontSize="{DynamicResource FontSizeTiny}" FontWeight="SemiBold" Foreground="White"/>
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Recommended Quests Section (Collapsible) -->
        <Expander x:Name="RecommendationsExpander" Grid.Row="2" Margin="0,0,0,12"
                  IsExpanded="False" Visibility="Collapsed">
            <Expander.Header>
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="TxtRecommendationsHeader" Text="Recommended Quests"
                               FontSize="{DynamicResource FontSizeSmall}" FontWeight="SemiBold"
                               Foreground="{StaticResource AccentBrush}"
                               VerticalAlignment="Center"/>
                    <Border x:Name="RecommendationCountBadge" Padding="6,2" CornerRadius="10"
                            Background="{StaticResource AccentBrush}" Margin="8,0,0,0"
                            VerticalAlignment="Center">
                        <TextBlock x:Name="TxtRecommendationCount" Text="0"
                                   FontSize="{DynamicResource FontSizeTiny}" FontWeight="Bold"
                                   Foreground="White"/>
                    </Border>
                </StackPanel>
            </Expander.Header>
            <Border Background="{StaticResource BackgroundMediumBrush}"
                    CornerRadius="6" Padding="12" Margin="0,8,0,0">
                <StackPanel>
                    <!-- No Recommendations Message -->
                    <TextBlock x:Name="TxtNoRecommendations" Text="No recommendations at this time"
                               FontSize="{DynamicResource FontSizeXSmall}"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center" Margin="0,8"
                               Visibility="Collapsed"/>

                    <!-- Recommendations List -->
                    <ItemsControl x:Name="RecommendationsList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="10,8" Margin="0,0,0,6" CornerRadius="4"
                                        Background="{StaticResource BackgroundDarkBrush}"
                                        Cursor="Hand"
                                        MouseLeftButtonDown="Recommendation_Click">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="{StaticResource BackgroundLightBrush}"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Type Badge -->
                                        <Border Grid.Column="0" Padding="6,3" CornerRadius="3"
                                                Background="{Binding TypeBackground}"
                                                VerticalAlignment="Center" Margin="0,0,10,0">
                                            <TextBlock Text="{Binding TypeText}"
                                                       FontSize="{DynamicResource FontSizeTiny}"
                                                       Foreground="White" FontWeight="SemiBold"/>
                                        </Border>

                                        <!-- Quest Info -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding QuestName}"
                                                           FontSize="{DynamicResource FontSizeXSmall}"
                                                           Foreground="{StaticResource TextPrimaryBrush}"
                                                           TextTrimming="CharacterEllipsis"
                                                           MaxWidth="280"/>
                                                <!-- Kappa Badge -->
                                                <Border Padding="4,1" CornerRadius="3"
                                                        Background="#9C27B0"
                                                        VerticalAlignment="Center" Margin="6,0,0,0"
                                                        Visibility="{Binding KappaBadgeVisibility}"
                                                        ToolTip="Required for Kappa Container">
                                                    <TextBlock Text="κ" FontSize="{DynamicResource FontSizeTiny}"
                                                               Foreground="White" FontWeight="Bold"/>
                                                </Border>
                                            </StackPanel>
                                            <TextBlock Text="{Binding Reason}"
                                                       FontSize="{DynamicResource FontSizeTiny}"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       TextTrimming="CharacterEllipsis"
                                                       MaxWidth="280"/>
                                        </StackPanel>

                                        <!-- Trader Initial -->
                                        <Border Grid.Column="2" Width="28" Height="28"
                                                CornerRadius="4" Background="{StaticResource BackgroundMediumBrush}"
                                                VerticalAlignment="Center" Margin="8,0,0,0">
                                            <TextBlock Text="{Binding TraderInitial}"
                                                       FontSize="{DynamicResource FontSizeXSmall}" FontWeight="Bold"
                                                       Foreground="{StaticResource AccentBrush}"
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </Expander>

        <!-- Main Content -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="300"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="350" MinWidth="250"/>
            </Grid.ColumnDefinitions>

            <!-- Quest List -->
            <Border Grid.Column="0" Background="{StaticResource BackgroundMediumBrush}"
                    CornerRadius="6">
                <ListBox x:Name="LstQuests"
                         Background="Transparent"
                         BorderThickness="0"
                         ItemTemplate="{StaticResource QuestItemTemplate}"
                         ItemContainerStyle="{StaticResource QuestListBoxItem}"
                         SelectionChanged="LstQuests_SelectionChanged"
                         VirtualizingPanel.IsVirtualizing="True"
                         VirtualizingPanel.VirtualizationMode="Recycling"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="8" Background="Transparent"
                          HorizontalAlignment="Center" VerticalAlignment="Stretch"/>

            <!-- Detail Panel -->
            <Border Grid.Column="2" Background="{StaticResource BackgroundMediumBrush}"
                    CornerRadius="6" Padding="16">
                <Grid>
                    <!-- Empty State -->
                    <TextBlock x:Name="TxtSelectQuest"
                               Text="Select a quest to view details"
                               FontSize="{DynamicResource FontSizeSmall}" Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>

                    <Grid x:Name="DetailPanel" Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Fixed Header Section -->
                        <StackPanel Grid.Row="0">
                            <!-- Quest Title -->
                            <TextBlock x:Name="TxtDetailName" FontSize="{DynamicResource FontSizeLarge}" FontWeight="SemiBold"
                                       Foreground="{StaticResource AccentBrush}"
                                       TextWrapping="Wrap" Margin="0,0,0,4"/>
                            <TextBlock x:Name="TxtDetailSubtitle" FontSize="{DynamicResource FontSizeXSmall}"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       TextWrapping="Wrap" Margin="0,0,0,8"/>

                            <!-- Actions (Top) -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                <Button x:Name="BtnWiki" Content="Wiki" Padding="12,6"
                                        Margin="0,0,8,0" Click="BtnWiki_Click"/>
                                <Button x:Name="BtnShowOnMap" Content="Show on Map" Padding="12,6"
                                        Margin="0,0,8,0" Click="BtnShowOnMap_Click"
                                        ToolTip="Show quest markers on the map"/>
                                <Button x:Name="BtnComplete" Content="Mark Complete" Padding="12,6"
                                        Margin="0,0,8,0" Click="BtnComplete_Click"/>
                                <Button x:Name="BtnReset" Content="Reset" Padding="12,6"
                                        Click="BtnReset_Click"/>
                            </StackPanel>

                            <!-- Trader & Status -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="Trader: " FontSize="{DynamicResource FontSizeXSmall}"
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock x:Name="TxtDetailTrader" FontSize="{DynamicResource FontSizeXSmall}"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Text="  |  Status: " FontSize="{DynamicResource FontSizeXSmall}"
                                           Foreground="{StaticResource TextSecondaryBrush}" Margin="8,0,0,0"/>
                                <Border x:Name="DetailStatusBadge" Padding="6,2" CornerRadius="3">
                                    <TextBlock x:Name="TxtDetailStatus" FontSize="{DynamicResource FontSizeTiny}"
                                               Foreground="White" FontWeight="SemiBold"/>
                                </Border>
                            </StackPanel>

                            <!-- Map -->
                            <StackPanel x:Name="MapInfoPanel" Orientation="Horizontal" Margin="0,0,0,16">
                                <TextBlock Text="Map: " FontSize="{DynamicResource FontSizeXSmall}"
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock x:Name="TxtDetailMap" FontSize="{DynamicResource FontSizeXSmall}"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Scrollable Content Section -->
                        <ScrollViewer x:Name="DetailScrollViewer" Grid.Row="1"
                                      VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled">
                            <StackPanel>
                                <!-- Required Items Section -->
                                <StackPanel x:Name="RequiredItemsSectionWrapper" Visibility="Collapsed">
                                    <TextBlock Text="Required Items" FontSize="{DynamicResource FontSizeSmall}" FontWeight="SemiBold"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               Margin="0,0,0,8"
                                               x:Name="TxtRequiredItemsHeader"/>
                                    <Border Background="{StaticResource BackgroundDarkBrush}"
                                            CornerRadius="4" Padding="12" Margin="0,0,0,16"
                                            x:Name="RequiredItemsSection">
                                        <ItemsControl x:Name="RequiredItemsList">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal" Margin="0,4"
                                                                Cursor="Hand"
                                                                Opacity="{Binding ItemOpacity}"
                                                                MouseLeftButtonDown="ItemName_Click">
                                                        <StackPanel.Style>
                                                            <Style TargetType="StackPanel">
                                                                <Setter Property="Background" Value="Transparent"/>
                                                                <Style.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="Background" Value="{StaticResource BackgroundMediumBrush}"/>
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </StackPanel.Style>
                                                        <!-- Item Icon -->
                                                        <Border Width="32" Height="32" CornerRadius="4"
                                                                Background="{StaticResource BackgroundMediumBrush}"
                                                                Margin="0,0,8,0">
                                                            <Grid>
                                                                <Image Source="{Binding IconSource}"
                                                                       Width="28" Height="28"
                                                                       Stretch="Uniform"
                                                                       RenderOptions.BitmapScalingMode="HighQuality"/>
                                                                <!-- Fulfilled checkmark overlay -->
                                                                <TextBlock Text="&#x2713;" FontSize="{DynamicResource FontSizeMedium}" FontWeight="Bold"
                                                                           Foreground="{StaticResource SuccessBrush}"
                                                                           HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                                                           Margin="0,0,1,0"
                                                                           Visibility="{Binding FulfilledVisibility}"/>
                                                            </Grid>
                                                        </Border>
                                                        <!-- Item Info -->
                                                        <StackPanel VerticalAlignment="Center">
                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="{Binding DisplayText}" FontSize="{DynamicResource FontSizeXSmall}"
                                                                           TextDecorations="{Binding TextDecorations}">
                                                                    <TextBlock.Style>
                                                                        <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                                                                            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                                                                            <Style.Triggers>
                                                                                <DataTrigger Binding="{Binding IsFulfilled}" Value="True">
                                                                                    <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                                                                </DataTrigger>
                                                                                <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=StackPanel}}" Value="True">
                                                                                    <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                                                                                </DataTrigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </TextBlock.Style>
                                                                </TextBlock>
                                                                <Border Padding="4,1" CornerRadius="2" Margin="8,0,0,0"
                                                                        Background="{StaticResource WarningBrush}"
                                                                        Visibility="{Binding FirVisibility}">
                                                                    <TextBlock Text="FIR" FontSize="{DynamicResource FontSizeTiny}" Foreground="White"/>
                                                                </Border>
                                                            </StackPanel>
                                                            <TextBlock Text="{Binding RequirementType}" FontSize="{DynamicResource FontSizeTiny}"
                                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                                       Visibility="{Binding RequirementTypeVisibility}"/>
                                                        </StackPanel>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Border>
                                </StackPanel>

                                <!-- Kappa Progress Section (for Collector quest) -->
                                <StackPanel x:Name="KappaProgressSection" Visibility="Collapsed" Margin="0,0,0,16">
                                    <TextBlock Text="Kappa Progress" FontSize="{DynamicResource FontSizeSmall}" FontWeight="SemiBold"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               Margin="0,0,0,8"/>
                                    <Border Background="{StaticResource BackgroundDarkBrush}"
                                            CornerRadius="4" Padding="12">
                                        <StackPanel>
                                            <!-- Progress Text -->
                                            <TextBlock x:Name="TxtKappaProgress" FontSize="{DynamicResource FontSizeSmall}"
                                                       Foreground="{StaticResource TextPrimaryBrush}"
                                                       Margin="0,0,0,8"/>
                                            <!-- Progress Bar -->
                                            <Grid Height="20" Margin="0,0,0,8">
                                                <Border Background="#333333" CornerRadius="4"/>
                                                <Border x:Name="KappaProgressBar" Background="#9C27B0"
                                                        CornerRadius="4" HorizontalAlignment="Left"/>
                                                <TextBlock x:Name="TxtKappaProgressPercent"
                                                           HorizontalAlignment="Center" VerticalAlignment="Center"
                                                           FontSize="{DynamicResource FontSizeTiny}" FontWeight="SemiBold" Foreground="White"/>
                                            </Grid>
                                            <!-- Show All Button -->
                                            <Button x:Name="BtnShowKappaQuests" Content="Show All Required Quests"
                                                    Padding="8,4" Click="BtnShowKappaQuests_Click"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>

                                <!-- Requirements Section -->
                                <StackPanel x:Name="RequirementsSectionWrapper" Visibility="Collapsed">
                                    <TextBlock Text="Requirements" FontSize="{DynamicResource FontSizeSmall}" FontWeight="SemiBold"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               Margin="0,0,0,8"/>
                                    <Border Background="{StaticResource BackgroundDarkBrush}"
                                            CornerRadius="4" Padding="12" Margin="0,0,0,16">
                                        <StackPanel x:Name="RequirementsPanel">
                                            <TextBlock x:Name="TxtRequiredLevel" FontSize="{DynamicResource FontSizeXSmall}"
                                                       Foreground="{StaticResource TextPrimaryBrush}"
                                                       Margin="0,0,0,4"/>
                                            <TextBlock x:Name="TxtRequiredScavKarma" FontSize="{DynamicResource FontSizeXSmall}"
                                                       Foreground="{StaticResource TextPrimaryBrush}"
                                                       Margin="0,0,0,4"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>

                                <!-- Objectives Section -->
                                <StackPanel x:Name="ObjectivesSection" Visibility="Collapsed">
                                    <TextBlock Text="Objectives" FontSize="{DynamicResource FontSizeSmall}" FontWeight="SemiBold"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               Margin="0,0,0,8"/>
                                    <Border Background="{StaticResource BackgroundDarkBrush}"
                                            CornerRadius="4" Margin="0,0,0,16">
                                        <ScrollViewer x:Name="ObjectivesScrollViewer" MaxHeight="200"
                                                      VerticalScrollBarVisibility="Auto"
                                                      HorizontalScrollBarVisibility="Disabled"
                                                      PreviewMouseWheel="NestedScrollViewer_PreviewMouseWheel">
                                            <StackPanel x:Name="ObjectivesList" Margin="12"/>
                                        </ScrollViewer>
                                    </Border>
                                </StackPanel>

                                <!-- Guide Section -->
                                <StackPanel x:Name="GuideSection" Visibility="Collapsed">
                                    <TextBlock Text="Guide" FontSize="{DynamicResource FontSizeSmall}" FontWeight="SemiBold"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               Margin="0,0,0,8"/>
                                    <Border Background="{StaticResource BackgroundDarkBrush}"
                                            CornerRadius="4" Padding="12" Margin="0,0,0,16">
                                        <StackPanel>
                                            <!-- Guide Text - Scrollable TextBox -->
                                            <Border x:Name="GuideTextSection" Visibility="Collapsed"
                                                    Background="{StaticResource BackgroundMediumBrush}"
                                                    CornerRadius="4" Margin="0,0,0,8">
                                                <ScrollViewer x:Name="GuideTextScrollViewer" MaxHeight="250"
                                                              VerticalScrollBarVisibility="Auto"
                                                              HorizontalScrollBarVisibility="Disabled"
                                                              PreviewMouseWheel="NestedScrollViewer_PreviewMouseWheel">
                                                    <TextBlock x:Name="TxtGuideText" FontSize="{DynamicResource FontSizeXSmall}"
                                                               Foreground="{StaticResource TextPrimaryBrush}"
                                                               TextWrapping="Wrap" Padding="10"/>
                                                </ScrollViewer>
                                            </Border>

                                            <!-- Guide Images with Expander -->
                                            <Expander x:Name="GuideImagesExpander" IsExpanded="False"
                                                      Visibility="Collapsed"
                                                      Expanded="GuideImagesExpander_Expanded">
                                                <Expander.Header>
                                                    <TextBlock x:Name="TxtGuideImagesHeader" Text="View Images" FontSize="{DynamicResource FontSizeTiny}"
                                                               Foreground="{StaticResource TextSecondaryBrush}"/>
                                                </Expander.Header>
                                                <ItemsControl x:Name="GuideImagesList" Margin="0,8,0,0">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <WrapPanel Orientation="Horizontal"/>
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border Margin="0,0,8,8" BorderThickness="1"
                                                                    BorderBrush="{StaticResource BorderBrush}"
                                                                    CornerRadius="4" Background="{StaticResource BackgroundMediumBrush}"
                                                                    Cursor="Hand" MouseLeftButtonDown="GuideImage_Click">
                                                                <StackPanel>
                                                                    <Grid Width="140" Height="80">
                                                                        <!-- Loading Placeholder -->
                                                                        <Border Background="{StaticResource BackgroundDarkBrush}"
                                                                                Visibility="{Binding LoadingVisibility}">
                                                                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                                                                <ProgressBar IsIndeterminate="True"
                                                                                             Width="60" Height="4"
                                                                                             Margin="0,0,0,6"/>
                                                                                <TextBlock Text="Loading..."
                                                                                           FontSize="{DynamicResource FontSizeTiny}"
                                                                                           Foreground="{StaticResource TextSecondaryBrush}"
                                                                                           HorizontalAlignment="Center"/>
                                                                            </StackPanel>
                                                                        </Border>
                                                                        <!-- Actual Image -->
                                                                        <Image Source="{Binding ImageSource}"
                                                                               Stretch="UniformToFill"
                                                                               RenderOptions.BitmapScalingMode="HighQuality"
                                                                               Visibility="{Binding ImageVisibility}"/>
                                                                    </Grid>
                                                                    <TextBlock Text="{Binding Caption}" FontSize="{DynamicResource FontSizeTiny}"
                                                                               Foreground="{StaticResource TextSecondaryBrush}"
                                                                               TextTrimming="CharacterEllipsis"
                                                                               TextAlignment="Center"
                                                                               MaxWidth="140" Margin="4,2"
                                                                               Visibility="{Binding CaptionVisibility}"/>
                                                                </StackPanel>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </Expander>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>

                                <!-- Prerequisites Section -->
                                <StackPanel x:Name="PrerequisitesSectionWrapper" Visibility="Collapsed">
                                    <TextBlock Text="Prerequisites" FontSize="{DynamicResource FontSizeSmall}" FontWeight="SemiBold"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               Margin="0,0,0,8"/>
                                    <Border Background="{StaticResource BackgroundDarkBrush}"
                                            CornerRadius="4" Padding="12" Margin="0,0,0,16">
                                        <ItemsControl x:Name="PrerequisitesList">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal" Margin="0,2">
                                                        <TextBlock Text="- " Foreground="{StaticResource TextSecondaryBrush}"/>
                                                        <TextBlock Text="{Binding DisplayName}"
                                                                   Foreground="{StaticResource TextPrimaryBrush}" FontSize="{DynamicResource FontSizeXSmall}"/>
                                                        <Border Padding="4,1" CornerRadius="2" Margin="8,0,0,0"
                                                                Background="{Binding StatusBackground}">
                                                            <TextBlock Text="{Binding StatusText}" FontSize="{DynamicResource FontSizeTiny}"
                                                                       Foreground="White"/>
                                                        </Border>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Border>
                                </StackPanel>

                                <!-- Alternative Quests Section (Mutually Exclusive) -->
                                <StackPanel x:Name="AlternativeQuestsSectionWrapper" Visibility="Collapsed">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="Other Choices" FontSize="{DynamicResource FontSizeSmall}" FontWeight="SemiBold"
                                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <Border Padding="6,2" CornerRadius="3" Margin="8,0,0,0"
                                                Background="#FF5722">
                                            <TextBlock Text="Mutually Exclusive" FontSize="{DynamicResource FontSizeTiny}"
                                                       Foreground="White" FontWeight="SemiBold"/>
                                        </Border>
                                    </StackPanel>
                                    <Border Background="{StaticResource BackgroundDarkBrush}"
                                            CornerRadius="4" Padding="12" Margin="0,0,0,16">
                                        <StackPanel>
                                            <TextBlock Text="Completing this quest will FAIL the following quests:"
                                                       FontSize="{DynamicResource FontSizeTiny}"
                                                       Foreground="#FF5722" FontStyle="Italic"
                                                       Margin="0,0,0,8"/>
                                            <ItemsControl x:Name="AlternativeQuestsList">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal" Margin="0,2">
                                                            <TextBlock Text="- " Foreground="{StaticResource TextSecondaryBrush}"/>
                                                            <TextBlock Text="{Binding DisplayName}"
                                                                       Foreground="{StaticResource TextPrimaryBrush}" FontSize="{DynamicResource FontSizeXSmall}"/>
                                                            <TextBlock Text=" (" FontSize="{DynamicResource FontSizeTiny}"
                                                                       Foreground="{StaticResource TextSecondaryBrush}" Margin="4,0,0,0"/>
                                                            <TextBlock Text="{Binding TraderName}" FontSize="{DynamicResource FontSizeTiny}"
                                                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                                                            <TextBlock Text=")" FontSize="{DynamicResource FontSizeTiny}"
                                                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                                                            <Border Padding="4,1" CornerRadius="2" Margin="8,0,0,0"
                                                                    Background="{Binding StatusBackground}">
                                                                <TextBlock Text="{Binding StatusText}" FontSize="{DynamicResource FontSizeTiny}"
                                                                           Foreground="White"/>
                                                            </Border>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
