<Window x:Class="TarkovDBEditor.Views.AddColumnDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Column" Height="400" Width="400"
        Background="{StaticResource PrimaryBrush}"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Column Name -->
        <Label Grid.Row="0" Grid.Column="0" Content="Column Name:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="0" Grid.Column="1" x:Name="ColumnNameBox" Margin="0,0,0,8"/>

        <!-- Display Name -->
        <Label Grid.Row="1" Grid.Column="0" Content="Display Name:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="DisplayNameBox" Margin="0,0,0,8"/>

        <!-- Type -->
        <Label Grid.Row="2" Grid.Column="0" Content="Type:" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="2" Grid.Column="1" x:Name="TypeComboBox" Margin="0,0,0,8"
                  ItemsSource="{Binding Source={StaticResource ColumnTypes}}"/>

        <!-- Options -->
        <Label Grid.Row="3" Grid.Column="0" Content="Options:" VerticalAlignment="Top"/>
        <StackPanel Grid.Row="3" Grid.Column="1" Margin="0,0,0,8">
            <CheckBox x:Name="RequiredCheck" Content="Required (NOT NULL)" Margin="0,0,0,4"/>
        </StackPanel>

        <!-- Default Value -->
        <Label Grid.Row="4" Grid.Column="0" Content="Default Value:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="4" Grid.Column="1" x:Name="DefaultValueBox" Margin="0,0,0,8"/>

        <!-- Foreign Key -->
        <Label Grid.Row="5" Grid.Column="0" Content="Foreign Key:" VerticalAlignment="Top"/>
        <StackPanel Grid.Row="5" Grid.Column="1" Margin="0,0,0,8">
            <CheckBox x:Name="ForeignKeyCheck" Content="Is Foreign Key"
                      Checked="ForeignKeyCheck_Changed" Unchecked="ForeignKeyCheck_Changed"/>
            <Grid x:Name="ForeignKeyPanel" Visibility="Collapsed" Margin="0,8,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Table:" FontSize="12"/>
                <ComboBox Grid.Row="0" Grid.Column="1" x:Name="FKTableComboBox"
                          SelectionChanged="FKTableComboBox_SelectionChanged" Margin="0,0,0,4"/>

                <Label Grid.Row="1" Grid.Column="0" Content="Column:" FontSize="12"/>
                <ComboBox Grid.Row="1" Grid.Column="1" x:Name="FKColumnComboBox"/>
            </Grid>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2"
                    Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Add" Style="{StaticResource PrimaryButton}" Click="Add_Click"
                    Width="100" Margin="0,0,8,0"/>
            <Button Content="Cancel" Style="{StaticResource SecondaryButton}" Click="Cancel_Click"
                    Width="100"/>
        </StackPanel>
    </Grid>

    <Window.Resources>
        <ObjectDataProvider x:Key="ColumnTypes" MethodName="GetValues" ObjectType="{x:Type sys:Enum}"
                            xmlns:sys="clr-namespace:System;assembly=mscorlib"
                            xmlns:m="clr-namespace:TarkovDBEditor.Models">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="m:ColumnType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>
</Window>
