<Window x:Class="TarkovDBEditor.Views.DataPublishWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Publish DB Update to TarkovHelper" Height="700" Width="900"
        Background="#1E1E1E"
        WindowStartupLocation="CenterOwner"
        Loaded="Window_Loaded">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2D2D30" CornerRadius="4" Padding="16" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="DB Update Publisher" FontSize="20" FontWeight="Bold" Foreground="#D4D4D4"/>
                    <TextBlock Text="Compare and publish database changes to TarkovHelper Assets folder"
                               Foreground="#888" Margin="0,4,0,0"/>
                </StackPanel>

                <Button x:Name="BtnRefresh" Grid.Column="1" Content="Refresh"
                        Width="100" Height="32" Click="BtnRefresh_Click"
                        Background="#0078D4" Foreground="White" BorderBrush="#0078D4"
                        VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Path Info -->
        <Border Grid.Row="1" Background="#252526" CornerRadius="4" Padding="12" Margin="0,0,0,16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Source:" Foreground="#888" VerticalAlignment="Center"/>
                <TextBlock x:Name="TxtSourcePath" Grid.Row="0" Grid.Column="1" Text="-" Foreground="#4CAF50"
                           VerticalAlignment="Center" TextTrimming="CharacterEllipsis" ToolTip="{Binding Text, RelativeSource={RelativeSource Self}}"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Target:" Foreground="#888" VerticalAlignment="Center" Margin="0,4,0,0"/>
                <TextBlock x:Name="TxtTargetPath" Grid.Row="1" Grid.Column="1" Text="-" Foreground="#2196F3"
                           VerticalAlignment="Center" Margin="0,4,0,0" TextTrimming="CharacterEllipsis" ToolTip="{Binding Text, RelativeSource={RelativeSource Self}}"/>
            </Grid>
        </Border>

        <!-- Changes List -->
        <Border Grid.Row="2" Background="#252526" CornerRadius="4" Padding="12" Margin="0,0,0,16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Changes" FontSize="14" FontWeight="SemiBold"
                           Foreground="#D4D4D4" Margin="0,0,0,8"/>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="ChangesPanel">
                        <!-- Database Section -->
                        <Expander x:Name="DbExpander" IsExpanded="True" Margin="0,0,0,8">
                            <Expander.Header>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock x:Name="DbStatusIcon" Text="○" Foreground="#888" Margin="0,0,8,0" FontSize="14"/>
                                    <TextBlock Text="Database (tarkov_data.db)" Foreground="#D4D4D4" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="DbStatusText" Text="" Foreground="#888" Margin="8,0,0,0"/>
                                </StackPanel>
                            </Expander.Header>
                            <Border Background="#1E1E1E" CornerRadius="4" Padding="12" Margin="20,8,0,0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Source:" Foreground="#888"/>
                                    <TextBlock x:Name="TxtDbSourceInfo" Grid.Row="0" Grid.Column="1" Text="-" Foreground="#D4D4D4"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Target:" Foreground="#888" Margin="0,4,0,0"/>
                                    <TextBlock x:Name="TxtDbTargetInfo" Grid.Row="1" Grid.Column="1" Text="-" Foreground="#D4D4D4" Margin="0,4,0,0"/>
                                </Grid>
                            </Border>
                        </Expander>

                        <!-- Map Configs Section -->
                        <Expander x:Name="ConfigExpander" IsExpanded="False" Margin="0,0,0,8">
                            <Expander.Header>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock x:Name="ConfigStatusIcon" Text="○" Foreground="#888" Margin="0,0,8,0" FontSize="14"/>
                                    <TextBlock Text="Map Configs (map_configs.json)" Foreground="#D4D4D4" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="ConfigStatusText" Text="" Foreground="#888" Margin="8,0,0,0"/>
                                </StackPanel>
                            </Expander.Header>
                        </Expander>

                        <!-- Map SVGs Section -->
                        <Expander x:Name="MapSvgExpander" IsExpanded="False" Margin="0,0,0,8">
                            <Expander.Header>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock x:Name="MapSvgStatusIcon" Text="○" Foreground="#888" Margin="0,0,8,0" FontSize="14"/>
                                    <TextBlock Text="Map SVGs" Foreground="#D4D4D4" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="MapSvgStatusText" Text="" Foreground="#888" Margin="8,0,0,0"/>
                                </StackPanel>
                            </Expander.Header>
                            <ItemsControl x:Name="MapSvgList" Margin="20,8,0,0">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Foreground="#D4D4D4" Margin="0,2">
                                            <Run Text="{Binding FileName}"/>
                                            <Run Text=" - " Foreground="#888"/>
                                            <Run Text="{Binding TypeText}" Foreground="{Binding TypeColor}"/>
                                        </TextBlock>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Expander>

                        <!-- Marker Icons Section -->
                        <Expander x:Name="MarkerIconExpander" IsExpanded="False" Margin="0,0,0,8">
                            <Expander.Header>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock x:Name="MarkerIconStatusIcon" Text="○" Foreground="#888" Margin="0,0,8,0" FontSize="14"/>
                                    <TextBlock Text="Marker Icons" Foreground="#D4D4D4" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="MarkerIconStatusText" Text="" Foreground="#888" Margin="8,0,0,0"/>
                                </StackPanel>
                            </Expander.Header>
                            <ItemsControl x:Name="MarkerIconList" Margin="20,8,0,0">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Foreground="#D4D4D4" Margin="0,2">
                                            <Run Text="{Binding FileName}"/>
                                            <Run Text=" - " Foreground="#888"/>
                                            <Run Text="{Binding TypeText}" Foreground="{Binding TypeColor}"/>
                                        </TextBlock>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Expander>

                        <!-- Item Icons Section -->
                        <Expander x:Name="ItemIconExpander" IsExpanded="False" Margin="0,0,0,8">
                            <Expander.Header>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock x:Name="ItemIconStatusIcon" Text="○" Foreground="#888" Margin="0,0,8,0" FontSize="14"/>
                                    <TextBlock Text="Item Icons" Foreground="#D4D4D4" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="ItemIconStatusText" Text="" Foreground="#888" Margin="8,0,0,0"/>
                                </StackPanel>
                            </Expander.Header>
                            <TextBlock x:Name="ItemIconSummary" Foreground="#888" Margin="20,8,0,0" TextWrapping="Wrap"/>
                        </Expander>

                        <!-- Hideout Icons Section -->
                        <Expander x:Name="HideoutIconExpander" IsExpanded="False" Margin="0,0,0,8">
                            <Expander.Header>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock x:Name="HideoutIconStatusIcon" Text="○" Foreground="#888" Margin="0,0,8,0" FontSize="14"/>
                                    <TextBlock Text="Hideout Icons" Foreground="#D4D4D4" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="HideoutIconStatusText" Text="" Foreground="#888" Margin="8,0,0,0"/>
                                </StackPanel>
                            </Expander.Header>
                            <ItemsControl x:Name="HideoutIconList" Margin="20,8,0,0">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Foreground="#D4D4D4" Margin="0,2">
                                            <Run Text="{Binding FileName}"/>
                                            <Run Text=" - " Foreground="#888"/>
                                            <Run Text="{Binding TypeText}" Foreground="{Binding TypeColor}"/>
                                        </TextBlock>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Expander>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Version Section -->
        <Border Grid.Row="3" Background="#252526" CornerRadius="4" Padding="12" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Current Version:" Foreground="#888" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBlock x:Name="TxtCurrentVersion" Grid.Column="1" Text="-" Foreground="#D4D4D4" FontWeight="Bold" VerticalAlignment="Center"/>

                <TextBlock Grid.Column="2" Text="New Version:" Foreground="#888" VerticalAlignment="Center" Margin="20,0,8,0"/>
                <TextBox x:Name="TxtNewVersion" Grid.Column="3" Text="" Height="28"
                         Background="#3E3E42" Foreground="White" BorderBrush="#555"
                         VerticalContentAlignment="Center" Padding="8,0"/>

                <TextBlock x:Name="TxtSummary" Grid.Column="4" Text="" Foreground="#FFC107" FontWeight="Bold"
                           VerticalAlignment="Center" HorizontalAlignment="Right"/>
            </Grid>
        </Border>

        <!-- Action Buttons -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="TxtStatus" Grid.Column="0" Text="Click Refresh to check for changes"
                       Foreground="#888" VerticalAlignment="Center"/>

            <Button x:Name="BtnCancel" Grid.Column="1" Content="Cancel"
                    Width="100" Height="36" Margin="0,0,12,0"
                    Click="BtnCancel_Click"
                    Background="#3E3E42" Foreground="White" BorderBrush="#555"/>

            <Button x:Name="BtnPublish" Grid.Column="2" Content="Publish"
                    Width="120" Height="36"
                    Click="BtnPublish_Click"
                    Background="#107C10" Foreground="White" BorderBrush="#107C10"
                    IsEnabled="False"/>
        </Grid>
    </Grid>
</Window>
