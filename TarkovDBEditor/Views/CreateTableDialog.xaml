<Window x:Class="TarkovDBEditor.Views.CreateTableDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:m="clr-namespace:TarkovDBEditor.Models"
        Title="Create New Table" Height="500" Width="600"
        Background="{StaticResource PrimaryBrush}"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">

    <Window.Resources>
        <ObjectDataProvider x:Key="ColumnTypes" MethodName="GetValues" ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="m:ColumnType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Table Name -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Grid.Column="0" Content="Table Name:" VerticalAlignment="Center"/>
            <TextBox Grid.Row="0" Grid.Column="1" x:Name="TableNameBox" Margin="0,0,0,8"/>

            <Label Grid.Row="1" Grid.Column="0" Content="Display Name:" VerticalAlignment="Center"/>
            <TextBox Grid.Row="1" Grid.Column="1" x:Name="DisplayNameBox"/>
        </Grid>

        <!-- Columns Header -->
        <TextBlock Grid.Row="1" Text="Columns" FontWeight="Bold" FontSize="{StaticResource FontSizeLarge}"
                   Foreground="{StaticResource TextBrush}" Margin="0,0,0,8"/>

        <!-- Columns List -->
        <Border Grid.Row="2" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="4">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <ListBox Grid.Row="0" x:Name="ColumnsListBox" BorderThickness="0"
                         Background="{StaticResource SecondaryBrush}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="30"/>
                                </Grid.ColumnDefinitions>

                                <TextBox Grid.Column="0" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                         Margin="0,0,4,0"/>
                                <ComboBox Grid.Column="1" SelectedItem="{Binding Type}" Margin="0,0,4,0"
                                          ItemsSource="{Binding Source={StaticResource ColumnTypes}}"/>
                                <CheckBox Grid.Column="2" Content="PK" IsChecked="{Binding IsPrimaryKey}"
                                          VerticalAlignment="Center"/>
                                <CheckBox Grid.Column="3" Content="Req" IsChecked="{Binding IsRequired}"
                                          VerticalAlignment="Center"/>
                                <Button Grid.Column="4" Content="X" Click="RemoveColumn_Click"
                                        Tag="{Binding}" Style="{StaticResource SecondaryButton}"
                                        Padding="4,2"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <Button Grid.Row="1" Content="+ Add Column" Click="AddColumn_Click"
                        Style="{StaticResource SecondaryButton}" Margin="4"/>
            </Grid>
        </Border>

        <!-- Info -->
        <TextBlock Grid.Row="3" Text="Note: ID column with auto-increment is added by default."
                   Foreground="{StaticResource TextDimBrush}" Margin="0,8,0,0"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Create" Style="{StaticResource PrimaryButton}" Click="Create_Click"
                    Width="100" Margin="0,0,8,0"/>
            <Button Content="Cancel" Style="{StaticResource SecondaryButton}" Click="Cancel_Click"
                    Width="100"/>
        </StackPanel>
    </Grid>
</Window>
