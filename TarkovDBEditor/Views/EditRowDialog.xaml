<Window x:Class="TarkovDBEditor.Views.EditRowDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Row" Height="500" Width="500"
        Background="{StaticResource PrimaryBrush}"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Fields -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="FieldsPanel" Margin="0,0,0,16"/>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Save" Style="{StaticResource PrimaryButton}" Click="Save_Click"
                    Width="100" Margin="0,0,8,0"/>
            <Button Content="Cancel" Style="{StaticResource SecondaryButton}" Click="Cancel_Click"
                    Width="100"/>
        </StackPanel>
    </Grid>
</Window>
