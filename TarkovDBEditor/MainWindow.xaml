<Window x:Class="TarkovDBEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:TarkovDBEditor.ViewModels"
        Title="Tarkov DB Editor" Height="700" Width="1100"
        Background="{StaticResource PrimaryBrush}"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0" Background="{StaticResource SecondaryBrush}" Foreground="{StaticResource TextBrush}">
            <MenuItem Header="File">
                <MenuItem Header="New Database..." Click="NewDatabase_Click"/>
                <MenuItem Header="Open Database..." Click="OpenDatabase_Click"/>
                <Separator/>
                <MenuItem Header="Exit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="Table">
                <MenuItem Header="New Table..." Command="{Binding CreateTableCommand}"/>
                <MenuItem Header="Delete Table" Command="{Binding DeleteTableCommand}"/>
                <Separator/>
                <MenuItem Header="Add Column..." Command="{Binding AddColumnCommand}"/>
            </MenuItem>
            <MenuItem Header="Data">
                <MenuItem Header="Add Row" Command="{Binding AddRowCommand}"/>
                <MenuItem Header="Delete Row" Command="{Binding DeleteRowCommand}"/>
                <Separator/>
                <MenuItem Header="Refresh" Command="{Binding RefreshCommand}"/>
            </MenuItem>
            <MenuItem Header="Debug">
                <MenuItem Header="Export Wiki Item Categories..." Click="ExportWikiItemCategories_Click"/>
                <MenuItem Header="Export Wiki Quests..." Click="ExportWikiQuests_Click"/>
                <Separator/>
                <MenuItem Header="Cache Tarkov Dev Data..." Click="CacheTarkovDevData_Click"/>
                <MenuItem Header="Fetch Wiki Data..." Click="FetchWikiData_Click" ToolTip="Fetch fresh data from Wiki (slow, requires internet)"/>
                <MenuItem Header="Refresh Data (from Cache)" Click="RefreshDataFromCache_Click" ToolTip="Update DB using cached Wiki data (fast, no internet required)"/>
                <Separator/>
                <MenuItem Header="Refresh Hideout Data..." Click="RefreshHideoutData_Click" ToolTip="Fetch hideout data from tarkov.dev and save to DB"/>
                <Separator/>
                <MenuItem Header="Map Editor..." Click="TestMap_Click"/>
            </MenuItem>
            <MenuItem Header="Tools">
                <MenuItem Header="Quest Requirements Validator..." Click="OpenQuestRequirementsValidator_Click"/>
                <MenuItem Header="Map Preview..." Click="OpenMapPreview_Click"/>
            </MenuItem>
        </Menu>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" MinWidth="150"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Table List -->
            <Border Grid.Column="0" Background="{StaticResource SecondaryBrush}"
                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" Background="{StaticResource AccentBrush}" CornerRadius="4,4,0,0" Padding="10,8">
                        <TextBlock Text="Tables" FontWeight="Bold" Foreground="White" FontSize="{StaticResource FontSizeLarge}"/>
                    </Border>

                    <!-- Table List -->
                    <ListBox Grid.Row="1" x:Name="TableList"
                             ItemsSource="{Binding Tables}"
                             SelectedItem="{Binding SelectedTable}"
                             BorderThickness="0"
                             Margin="4">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="4,2">
                                    <TextBlock Text="&#xE8F1;" FontFamily="Segoe MDL2 Assets"
                                               Foreground="{StaticResource AccentBrush}" Margin="0,0,8,0"/>
                                    <TextBlock Text="{Binding DisplayName}" VerticalAlignment="Center"/>
                                    <TextBlock Text=" (" Foreground="{StaticResource TextDimBrush}"/>
                                    <TextBlock Text="{Binding Columns.Count}" Foreground="{StaticResource TextDimBrush}"/>
                                    <TextBlock Text=" cols)" Foreground="{StaticResource TextDimBrush}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Buttons -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="8">
                        <Button Content="+ New" Style="{StaticResource PrimaryButton}"
                                Command="{Binding CreateTableCommand}" Margin="0,0,4,0"/>
                        <Button Content="Delete" Style="{StaticResource SecondaryButton}"
                                Command="{Binding DeleteTableCommand}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center"
                          VerticalAlignment="Stretch" Background="Transparent"/>

            <!-- Right Panel: Data Editor -->
            <Border Grid.Column="2" Background="{StaticResource SecondaryBrush}"
                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" Background="{StaticResource AccentBrush}" CornerRadius="4,4,0,0" Padding="10,8">
                        <Grid>
                            <TextBlock FontWeight="Bold" Foreground="White" FontSize="{StaticResource FontSizeLarge}">
                                <Run Text="Data: "/>
                                <Run Text="{Binding SelectedTable.DisplayName, FallbackValue='(Select a table)'}"/>
                            </TextBlock>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="+ Column" Style="{StaticResource SecondaryButton}"
                                        Command="{Binding AddColumnCommand}" Margin="0,0,4,0" Padding="8,4"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Column Info -->
                    <Expander Grid.Row="1" Header="Schema" IsExpanded="False" Margin="8,8,8,0"
                              Foreground="{StaticResource TextBrush}">
                        <ItemsControl ItemsSource="{Binding SelectedTable.Columns}" Margin="8,4">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource PrimaryBrush}"
                                            BorderBrush="{StaticResource BorderBrush}"
                                            BorderThickness="1" CornerRadius="3" Padding="8,4" Margin="0,2">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold" Width="120"/>
                                            <TextBlock Text="{Binding Type}" Foreground="{StaticResource AccentBrush}" Width="80"/>
                                            <TextBlock Text="PK" Foreground="Orange" Margin="4,0"
                                                       Visibility="{Binding IsPrimaryKey, Converter={StaticResource BoolToVisibility}}"/>
                                            <TextBlock Text="FK" Foreground="Green" Margin="4,0"
                                                       Visibility="{Binding IsForeignKey, Converter={StaticResource BoolToVisibility}}"/>
                                            <TextBlock Text="Required" Foreground="Red" Margin="4,0"
                                                       Visibility="{Binding IsRequired, Converter={StaticResource BoolToVisibility}}"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Expander>

                    <!-- Data Grid -->
                    <DataGrid Grid.Row="2" x:Name="DataGridView"
                              ItemsSource="{Binding TableData}"
                              SelectedItem="{Binding SelectedRow}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              SelectionMode="Single"
                              Margin="8">
                        <!-- Columns will be generated dynamically -->
                    </DataGrid>

                    <!-- Action Buttons -->
                    <Border Grid.Row="3" Background="{StaticResource PrimaryBrush}" Padding="8">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="+ Add Row" Style="{StaticResource PrimaryButton}"
                                    Command="{Binding AddRowCommand}" Margin="0,0,8,0"/>
                            <Button Content="Edit" Style="{StaticResource SecondaryButton}"
                                    Click="EditRow_Click" Margin="0,0,8,0"/>
                            <Button Content="Delete" Style="{StaticResource SecondaryButton}"
                                    Command="{Binding DeleteRowCommand}"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="{StaticResource SecondaryBrush}" Padding="8,4">
            <TextBlock Text="{Binding StatusMessage}" Foreground="{StaticResource TextDimBrush}"/>
        </Border>
    </Grid>
</Window>
